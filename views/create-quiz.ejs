}

/* Option Preview Styles */
.option-preview {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 6px;
    padding: 8px 12px;
    margin-top: 5px;
    margin-bottom: 10px;
    border-left: 3px solid #667eea;
}

.option-preview small {
    color: #6c757d;
    font-size: 12px;
}

.option-preview em {
    color: #495057;
