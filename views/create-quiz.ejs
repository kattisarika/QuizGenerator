    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h2><i class="fas fa-plus-circle me-2"></i>Create New Quiz</h2>
                        <p class="mb-0">Choose how you want to create your quiz</p>
                    </div>
                    <div class="card-body p-4">
                        <!-- Tab Navigation -->
                        <ul class="nav nav-tabs mb-4" id="quizCreationTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="upload-tab" data-bs-toggle="tab" data-bs-target="#upload" type="button" role="tab" aria-controls="upload" aria-selected="true">
                                    <i class="fas fa-file-upload me-2"></i>Upload Documents
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual" type="button" role="tab" aria-controls="manual" aria-selected="false">
                                    <i class="fas fa-edit me-2"></i>Create Questions Manually
                                </button>
                            </li>

                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="complex-builder-tab" data-bs-toggle="tab" data-bs-target="#complex-builder" type="button" role="tab" aria-controls="complex-builder" aria-selected="false">
                                    <i class="fas fa-magic me-2"></i>Complex Quiz Builder
                                </button>
                            </li>
                        </ul>

                        <!-- Tab Content -->
                        <div class="tab-content" id="quizCreationTabContent">
                            <!-- Upload Documents Tab -->
                            <div class="tab-pane fade show active" id="upload" role="tabpanel" aria-labelledby="upload-tab">
                                <form action="/create-quiz" method="POST" enctype="multipart/form-data" id="quizForm">
                            <!-- Basic Quiz Information -->
                            <div class="mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Quiz Information
                                </h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="title" class="form-label">Quiz Title *</label>
                                        <input type="text" class="form-control" id="title" name="title" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="description" class="form-label">Description</label>
                                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                                    </div>
                                </div>

                                <!-- Quiz Type Selection -->
                                <div class="row mt-3">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">Quiz Type *</label>
                                        <div class="quiz-type-selector">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="quiz-type-card" onclick="selectQuizType('regular')">
                                                        <input type="radio" id="type-regular" name="quizType" value="regular" checked hidden>
                                                        <div class="quiz-type-content active" id="regular-card">
                                                            <div class="quiz-type-icon">
                                                                <i class="fas fa-book"></i>
                                                            </div>
                                                            <h5>Regular Quiz</h5>
                                                            <p class="mb-0">Standard quiz for practice and assessment</p>
                                                            <ul class="quiz-features">
                                                                <li><i class="fas fa-check"></i> Self-paced</li>
                                                                <li><i class="fas fa-check"></i> Immediate results</li>
                                                                <li><i class="fas fa-check"></i> Multiple attempts</li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="quiz-type-card" onclick="selectQuizType('competitive')">
                                                        <input type="radio" id="type-competitive" name="quizType" value="competitive" hidden>
                                                        <div class="quiz-type-content" id="competitive-card">
                                                            <div class="quiz-type-icon">
                                                                <i class="fas fa-trophy"></i>
                                                            </div>
                                                            <h5>Competitive Quiz</h5>
                                                            <p class="mb-0">Real-time competition with leaderboard</p>
                                                            <ul class="quiz-features">
                                                                <li><i class="fas fa-check"></i> Live leaderboard</li>
                                                                <li><i class="fas fa-check"></i> Time-based scoring</li>
                                                                <li><i class="fas fa-check"></i> Single attempt</li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Grade Level and Subject Selection -->
                                <div class="row mt-3">
                                    <div class="col-md-6 mb-3">
                                        <label for="gradeLevel" class="form-label">Grade Level *</label>
                                        <select class="form-select" id="gradeLevel" name="gradeLevel" required>
                                            <option value="">Select Grade Level</option>
                                            <option value="1st grade">1st Grade</option>
                                            <option value="2nd grade">2nd Grade</option>
                                            <option value="3rd grade">3rd Grade</option>
                                            <option value="4th grade">4th Grade</option>
                                            <option value="5th grade">5th Grade</option>
                                            <option value="6th grade">6th Grade</option>
                                            <option value="7th grade">7th Grade</option>
                                            <option value="8th grade">8th Grade</option>
                                            <option value="9th grade">9th Grade</option>
                                            <option value="10th grade">10th Grade</option>
                                            <option value="11th grade">11th Grade</option>
                                            <option value="12th grade">12th Grade</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Subjects *</label>
                                        <div class="radio-group">
                                            <div class="radio-item">
                                                <input type="radio" id="subject-english" name="subjects" value="English" onchange="updateSubjectSelection()">
                                                <label for="subject-english">English</label>
                                            </div>
                                            <div class="radio-item">
                                                <input type="radio" id="subject-science" name="subjects" value="Science" onchange="updateSubjectSelection()">
                                                <label for="subject-science">Science</label>
                                            </div>
                                            <div class="radio-item">
                                                <input type="radio" id="subject-math" name="subjects" value="Math" onchange="updateSubjectSelection()">
                                                <label for="subject-math">Math</label>
                                            </div>
                                            <div class="radio-item">
                                                <input type="radio" id="language-kannada" name="language" value="Kannada" onchange="updateLanguageSelection()">
                                                <label for="language-kannada">
                                                    <i class="fas fa-flag me-2"></i>Kannada (ಕನ್ನಡ)
                                                </label>
                                            </div>
                                        </div>
                                        <div id="subject-selection-info" class="mt-2" style="display: none;">
                                            <small class="text-success">
                                                <i class="fas fa-check-circle"></i>
                                                <span id="selected-subjects-text"></span>
                                            </small>
                                        </div>
                                        <div class="mt-2">
                                            <button type="button" class="btn btn-sm btn-outline-info" onclick="testSubjectSelection()">
                                                <i class="fas fa-bug"></i> Test Subject Selection
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Language Selection -->
                                <div class="row mt-3">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">Language *</label>
                                        <div class="radio-group">
                                            <div class="radio-item">
                                                <input type="radio" id="language-english" name="language" value="English" onchange="updateLanguageSelection()" checked>
                                                <label for="language-english">
                                                    <i class="fas fa-flag me-2"></i>English
                                                </label>
                                            </div>
                                            <div class="radio-item">
                                                <input type="radio" id="language-spanish" name="language" value="Spanish" onchange="updateLanguageSelection()">
                                                <label for="language-spanish">
                                                    <i class="fas fa-flag me-2"></i>Spanish (Español)
                                                </label>
                                            </div>
                                            <div class="radio-item">
                                                <input type="radio" id="language-french" name="language" value="French" onchange="updateLanguageSelection()">
                                                <label for="language-french">
                                                    <i class="fas fa-flag me-2"></i>French (Français)
                                                </label>
                                            </div>
                                            <div class="radio-item">
                                                <input type="radio" id="language-kannada" name="language" value="Kannada" onchange="updateLanguageSelection()">
                                                <label for="language-kannada">
                                                    <i class="fas fa-flag me-2"></i>Kannada (ಕನ್ನಡ)
                                                </label>
                                            </div>
                                        </div>
                                        <div id="language-selection-info" class="mt-2" style="display: none;">
                                            <small class="text-success">
                                                <i class="fas fa-check-circle"></i>
                                                <span id="selected-language-text">English selected</span>
                                            </small>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="fas fa-info-circle"></i>
                                                Select the primary language for this quiz content
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- File Upload Section -->
                            <div class="mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-upload me-2"></i>Upload Documents
                                </h5>

                                <!-- Question Paper Upload -->
                                <div class="mb-4">
                                    <label class="form-label">Question Paper *</label>
                                    <div class="file-upload-area" onclick="document.getElementById('questionPaper').click()">
                                        <div class="upload-icon">
                                            <i class="fas fa-file-pdf"></i>
                                        </div>
                                        <h6>Upload Question Paper</h6>
                                        <p class="text-muted">Drag and drop or click to upload PDF/DOC file</p>
                                        <small class="text-muted">Supported formats: PDF, DOC, DOCX (Max 10MB)</small>
                                    </div>
                                    <input type="file" id="questionPaper" name="questionPaper" accept=".pdf,.doc,.docx"
                                           style="display: none;" required onchange="handleFileSelect(this, 'questionPaper')">
                                    <div id="questionPaperInfo" class="file-info" style="display: none;"></div>
                                </div>

                                <!-- Answer Paper Upload -->
                                <div class="mb-4">
                                    <label class="form-label">Answer Key (Optional)</label>
                                    <div class="file-upload-area" onclick="document.getElementById('answerPaper').click()">
                                        <div class="upload-icon">
                                            <i class="fas fa-file-alt"></i>
                                        </div>
                                        <h6>Upload Answer Key</h6>
                                        <p class="text-muted">Drag and drop or click to upload answer key</p>
                                        <small class="text-muted">Supported formats: PDF, DOC, DOCX (Max 10MB)</small>
                                    </div>
                                    <input type="file" id="answerPaper" name="answerPaper" accept=".pdf,.doc,.docx"
                                           style="display: none;" onchange="handleFileSelect(this, 'answerPaper')">
                                    <div id="answerPaperInfo" class="file-info" style="display: none;"></div>
                                </div>
                            </div>

                            <!-- Format Instructions -->
                            <div class="alert alert-info">
                                <h6><i class="fas fa-info-circle me-2"></i>Document Format Guidelines</h6>
