<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Assignments - SkillOns</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .assignments-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 40px;
            border-radius: 12px;
            margin-bottom: 30px;
            text-align: center;
        }

        .page-header h1 {
            margin: 0 0 10px 0;
            font-size: 32px;
        }

        .page-header p {
            margin: 0;
            opacity: 0.9;
            font-size: 16px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            border-left: 4px solid;
        }

        .stat-card.submitted {
            border-left-color: #3b82f6;
        }

        .stat-card.under-review {
            border-left-color: #f59e0b;
        }

        .stat-card.reviewed {
            border-left-color: #10b981;
        }

        .stat-card.returned {
            border-left-color: #ef4444;
        }

        .stat-number {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .stat-card.submitted .stat-number {
            color: #3b82f6;
        }

        .stat-card.under-review .stat-number {
            color: #f59e0b;
        }

        .stat-card.reviewed .stat-number {
            color: #10b981;
        }

        .stat-card.returned .stat-number {
            color: #ef4444;
        }

        .stat-label {
            color: #6b7280;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .assignments-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .section-header {
            background: #f8f9fa;
            padding: 20px 30px;
            border-bottom: 1px solid #e9ecef;
        }

        .section-header h2 {
            margin: 0;
            color: #374151;
            font-size: 20px;
        }

        .assignments-table {
            width: 100%;
            border-collapse: collapse;
        }

        .assignments-table th,
        .assignments-table td {
            padding: 15px 20px;
            text-align: left;
            border-bottom: 1px solid #e9ecef;
        }

        .assignments-table th {
            background: #f8f9fa;
            font-weight: 600;
            color: #374151;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .assignments-table tr:hover {
            background: #f8f9fa;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-badge.submitted {
            background: #dbeafe;
            color: #1e40af;
        }

        .status-badge.under-review {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.reviewed {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.returned {
            background: #fee2e2;
            color: #991b1b;
        }

        .category-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .category-badge.assignment {
            background: #e0e7ff;
            color: #3730a3;
        }

        .category-badge.doubts {
            background: #fef3c7;
            color: #92400e;
        }

        .action-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: all 0.3s ease;
        }

        .action-btn.view {
            background: #3b82f6;
            color: white;
        }

        .action-btn.view:hover {
            background: #2563eb;
            color: white;
            text-decoration: none;
        }

        .action-btn.review {
            background: #f59e0b;
            color: white;
        }

        .action-btn.review:hover {
            background: #d97706;
            color: white;
            text-decoration: none;
        }

        .action-btn.download {
            background: #10b981;
            color: white;
        }

        .action-btn.download:hover {
            background: #059669;
            color: white;
            text-decoration: none;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .action-buttons .action-btn {
            flex: 1;
            min-width: 80px;
            text-align: center;
        }

        .student-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .student-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #667eea;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 14px;
        }

        .student-details {
            flex: 1;
        }

        .student-name {
            font-weight: 600;
            color: #374151;
            margin-bottom: 2px;
        }

        .student-email {
            font-size: 12px;
            color: #6b7280;
        }

        .file-info {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .file-icon {
            color: #6b7280;
        }

        .file-name {
            font-size: 14px;
            color: #374151;
        }

        .no-assignments {
            text-align: center;
            padding: 60px 20px;
            color: #6b7280;
        }

        .no-assignments i {
            font-size: 48px;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .filters {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .filters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            align-items: end;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .filter-group label {
            font-size: 14px;
            font-weight: 600;
            color: #374151;
        }

        .filter-select {
            padding: 10px 12px;
            border: 2px solid #e5e7eb;
            border-radius: 6px;
            font-size: 14px;
            background: white;
        }

        .filter-select:focus {
            outline: none;
            border-color: #667eea;
        }

        .filter-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .filter-btn:hover {
            background: #5a67d8;
        }

        /* File Preview Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .modal-content {
            position: relative;
            background-color: white;
            margin: 2% auto;
            padding: 0;
            width: 90%;
            height: 90%;
            border-radius: 8px;
            overflow: hidden;
        }

        .modal-header {
            background: #667eea;
            color: white;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h3 {
            margin: 0;
            font-size: 18px;
        }

        .close {
            color: white;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            line-height: 1;
        }

        .close:hover {
            opacity: 0.7;
        }

        .modal-body {
            height: calc(100% - 60px);
            padding: 0;
        }

        .file-preview {
            width: 100%;
            height: 100%;
            border: none;
        }

        .file-info {
            padding: 15px 20px;
            background: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .file-details {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .file-name {
            font-weight: 600;
            color: #374151;
        }

        .file-meta {
            font-size: 14px;
            color: #6b7280;
        }

        .download-btn {
            background: #10b981;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .download-btn:hover {
            background: #059669;
            color: white;
            text-decoration: none;
        }

        @media (max-width: 768px) {
            .assignments-container {
                padding: 10px;
            }

            .page-header {
                padding: 20px;
            }

            .page-header h1 {
                font-size: 24px;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .assignments-table {
                font-size: 14px;
            }

            .assignments-table th,
            .assignments-table td {
                padding: 10px 8px;
            }

            .filters-grid {
                grid-template-columns: 1fr;
            }

            .modal-content {
                width: 95%;
                height: 95%;
                margin: 2.5% auto;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-buttons .action-btn {
                min-width: auto;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">SkillOns</a>
            </div>
            <div class="nav-menu">
                <a href="/teacher/dashboard" class="nav-link">Dashboard</a>
                <a href="/teacher/create-quiz" class="nav-link">Create Quiz</a>
                <a href="/teacher/student-assignments" class="nav-link active">Student Assignments</a>
                <a href="/teacher/student-results" class="nav-link">Student Results</a>
                <a href="/logout" class="nav-link logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <div class="assignments-container">
        <div class="page-header">
            <h1><i class="fas fa-file-alt"></i> Student Assignments</h1>
            <p>Review and manage student submissions for <strong><%= organization ? organization.name : 'Your Organization' %></strong></p>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card submitted">
                <div class="stat-number"><%= assignmentsByStatus.submitted.length %></div>
                <div class="stat-label">New Submissions</div>
            </div>
            <div class="stat-card under-review">
                <div class="stat-number"><%= assignmentsByStatus.under_review.length %></div>
                <div class="stat-label">Under Review</div>
            </div>
            <div class="stat-card reviewed">
                <div class="stat-number"><%= assignmentsByStatus.reviewed.length %></div>
                <div class="stat-label">Reviewed</div>
            </div>
            <div class="stat-card returned">
                <div class="stat-number"><%= assignmentsByStatus.returned.length %></div>
                <div class="stat-label">Returned</div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters">
            <div class="filters-grid">
                <div class="filter-group">
                    <label for="statusFilter">Status</label>
                    <select id="statusFilter" class="filter-select">
                        <option value="">All Statuses</option>
                        <option value="submitted">Submitted</option>
                        <option value="under_review">Under Review</option>
                        <option value="reviewed">Reviewed</option>
                        <option value="returned">Returned</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="categoryFilter">Category</label>
                    <select id="categoryFilter" class="filter-select">
                        <option value="">All Categories</option>
                        <option value="Assignment">Assignment</option>
                        <option value="Doubts">Doubts</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="gradeFilter">Grade</label>
                    <select id="gradeFilter" class="filter-select">
                        <option value="">All Grades</option>
                        <option value="Grade 1">Grade 1</option>
                        <option value="Grade 2">Grade 2</option>
                        <option value="Grade 3">Grade 3</option>
                        <option value="Grade 4">Grade 4</option>
                        <option value="Grade 5">Grade 5</option>
                        <option value="Grade 6">Grade 6</option>
                        <option value="Grade 7">Grade 7</option>
                        <option value="Grade 8">Grade 8</option>
                        <option value="Grade 9">Grade 9</option>
                        <option value="Grade 10">Grade 10</option>
                        <option value="Grade 11">Grade 11</option>
                        <option value="Grade 12">Grade 12</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="teacherFilter">Assigned Teacher</label>
                    <select id="teacherFilter" class="filter-select">
                        <option value="">All Teachers</option>
                        <option value="me">My Assignments</option>
                        <option value="unassigned">Unassigned</option>
                    </select>
                </div>
                <div class="filter-group">
                    <button class="filter-btn" onclick="applyFilters()">
                        <i class="fas fa-filter"></i> Apply Filters
                    </button>
                </div>
            </div>
        </div>

        <!-- Assignments Table -->
        <div class="assignments-section">
            <div class="section-header">
                <h2>All Assignments (<%= assignments.length %>)</h2>
            </div>
            
            <% if (assignments.length === 0) { %>
                <div class="no-assignments">
                    <i class="fas fa-inbox"></i>
                    <h3>No Assignments Yet</h3>
                    <p>Students haven't submitted any assignments yet.</p>
                </div>
            <% } else { %>
                <table class="assignments-table" id="assignmentsTable">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Grade</th>
                            <th>Subject</th>
                            <th>Assigned Teacher</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% assignments.forEach(assignment => { %>
                            <tr data-status="<%= assignment.status %>"
                                data-category="<%= assignment.category %>"
                                data-grade="<%= assignment.grade %>"
                                data-assigned-teacher="<%= assignment.assignedTeacher ? assignment.assignedTeacher._id : '' %>">
                                <td>
                                    <div class="student-info">
                                        <div class="student-avatar">
                                            <%= assignment.studentName.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="student-details">
                                            <div class="student-name"><%= assignment.studentName %></div>
                                            <div class="student-email"><%= assignment.studentEmail %></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div style="font-weight: 600; margin-bottom: 4px;"><%= assignment.title %></div>
                                    <% if (assignment.description) { %>
                                        <div style="font-size: 12px; color: #6b7280;">
                                            <%= assignment.description.substring(0, 50) %><%= assignment.description.length > 50 ? '...' : '' %>
                                        </div>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="category-badge <%= assignment.category.toLowerCase() %>">
                                        <%= assignment.category %>
                                    </span>
                                </td>
                                <td><%= assignment.grade %></td>
                                <td><%= assignment.subject %></td>
                                <td>
                                    <% if (assignment.assignedTeacher) { %>
                                        <div style="font-weight: 600; color: #374151; margin-bottom: 2px;">
                                            <%= assignment.assignedTeacher.displayName %>
                                        </div>
                                        <div style="font-size: 12px; color: #6b7280;">
                                            <%= assignment.assignedTeacher.email %>
                                        </div>
                                        <% if (assignment.assignedTeacher._id.toString() === user._id.toString()) { %>
                                            <span style="background: #dbeafe; color: #1e40af; padding: 2px 6px; border-radius: 10px; font-size: 10px; font-weight: 600;">
                                                YOU
                                            </span>
                                        <% } %>
                                    <% } else { %>
                                        <span style="color: #9ca3af; font-style: italic;">Unassigned</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="status-badge <%= assignment.status.replace('_', '-') %>">
                                        <%= assignment.status.replace('_', ' ') %>
                                    </span>
                                </td>
                                <td>
                                    <div style="font-size: 14px; margin-bottom: 2px;">
                                        <%= new Date(assignment.submittedAt).toLocaleDateString() %>
                                    </div>
                                    <div style="font-size: 12px; color: #6b7280;">
                                        <%= new Date(assignment.submittedAt).toLocaleTimeString() %>
                                    </div>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn view" onclick="previewFile('<%= assignment._id %>', '<%= assignment.originalFileName %>', '<%= assignment.fileType %>')" title="Preview file">
                                            <i class="fas fa-eye"></i> Preview
                                        </button>
                                        <a href="/teacher/assignment/<%= assignment._id %>/file" target="_blank" class="action-btn view" title="View file in new tab">
                                            <i class="fas fa-external-link-alt"></i> Open
                                        </a>
                                        <a href="/teacher/assignment/<%= assignment._id %>/download" class="action-btn download" title="Download file">
                                            <i class="fas fa-download"></i> Download
                                        </a>
                                        <% if (assignment.status === 'submitted' || assignment.status === 'under_review') { %>
                                            <a href="/teacher/assignment/<%= assignment._id %>/review" class="action-btn review" title="Review and grade assignment">
                                                <i class="fas fa-edit"></i> Review
                                            </a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>

    <!-- File Preview Modal -->
    <div id="fileModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">File Preview</h3>
                <span class="close" onclick="closeModal()">&times;</span>
            </div>
            <div class="file-info">
                <div class="file-details">
                    <div class="file-name" id="modalFileName">Loading...</div>
                    <div class="file-meta" id="modalFileMeta">Please wait...</div>
                </div>
                <a id="modalDownloadBtn" href="#" class="download-btn">
                    <i class="fas fa-download"></i> Download
                </a>
            </div>
            <div class="modal-body">
                <iframe id="filePreview" class="file-preview" src=""></iframe>
            </div>
        </div>
    </div>

    <script>
        function applyFilters() {
            const statusFilter = document.getElementById('statusFilter').value;
            const categoryFilter = document.getElementById('categoryFilter').value;
            const gradeFilter = document.getElementById('gradeFilter').value;
            const teacherFilter = document.getElementById('teacherFilter').value;

            const rows = document.querySelectorAll('#assignmentsTable tbody tr');
            const currentUserId = '<%= user._id %>';

            rows.forEach(row => {
                const status = row.dataset.status;
                const category = row.dataset.category;
                const grade = row.dataset.grade;
                const assignedTeacher = row.dataset.assignedTeacher;

                let show = true;

                if (statusFilter && status !== statusFilter) {
                    show = false;
                }

                if (categoryFilter && category !== categoryFilter) {
                    show = false;
                }

                if (gradeFilter && grade !== gradeFilter) {
                    show = false;
                }

                if (teacherFilter) {
                    if (teacherFilter === 'me' && assignedTeacher !== currentUserId) {
                        show = false;
                    } else if (teacherFilter === 'unassigned' && assignedTeacher !== '') {
                        show = false;
                    }
                }

                row.style.display = show ? '' : 'none';
            });

            // Update visible count
            const visibleRows = document.querySelectorAll('#assignmentsTable tbody tr:not([style*="display: none"])');
            document.querySelector('.section-header h2').textContent =
                `All Assignments (${visibleRows.length})`;
        }
        
        // Auto-apply filters on change
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        document.getElementById('categoryFilter').addEventListener('change', applyFilters);
        document.getElementById('gradeFilter').addEventListener('change', applyFilters);
        document.getElementById('teacherFilter').addEventListener('change', applyFilters);

        // File preview functions
        function previewFile(assignmentId, fileName, fileType) {
            const modal = document.getElementById('fileModal');
            const modalTitle = document.getElementById('modalTitle');
            const modalFileName = document.getElementById('modalFileName');
            const modalFileMeta = document.getElementById('modalFileMeta');
            const modalDownloadBtn = document.getElementById('modalDownloadBtn');
            const filePreview = document.getElementById('filePreview');

            // Set modal content
            modalTitle.textContent = 'File Preview - ' + fileName;
            modalFileName.textContent = fileName;
            modalFileMeta.textContent = `File Type: ${fileType}`;
            modalDownloadBtn.href = `/teacher/assignment/${assignmentId}/download`;

            // Set preview source
            const previewUrl = `/teacher/assignment/${assignmentId}/file`;

            // Check if it's a PDF or image
            if (fileType === 'application/pdf') {
                filePreview.src = previewUrl;
            } else if (fileType.startsWith('image/')) {
                // For images, create an img element instead of iframe
                filePreview.style.display = 'none';
                const existingImg = document.getElementById('imagePreview');
                if (existingImg) {
                    existingImg.remove();
                }

                const img = document.createElement('img');
                img.id = 'imagePreview';
                img.src = previewUrl;
                img.style.width = '100%';
                img.style.height = '100%';
                img.style.objectFit = 'contain';
                img.style.backgroundColor = '#f8f9fa';

                document.querySelector('.modal-body').appendChild(img);
            } else {
                filePreview.src = previewUrl;
            }

            // Show modal
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('fileModal');
            const filePreview = document.getElementById('filePreview');
            const existingImg = document.getElementById('imagePreview');

            modal.style.display = 'none';
            document.body.style.overflow = 'auto';

            // Clear preview sources
            filePreview.src = '';
            filePreview.style.display = 'block';

            if (existingImg) {
                existingImg.remove();
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('fileModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Close modal with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeModal();
            }
        });
    </script>
</body>
</html>
