<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Management - SkillOns</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">SkillOns</a>
            </div>
            <div class="nav-menu">
                <a href="/admin/dashboard" class="nav-link">Dashboard</a>
                <a href="/admin/content-management" class="nav-link active">Content Management</a>
                <a href="/select-role" class="nav-link">Change Role</a>
                <a href="/logout" class="nav-link logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1><i class="fas fa-cogs me-2"></i>Content Management</h1>
                <a href="/admin/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>

            <div class="content-management-section">
                <div class="admin-actions">
                    <button class="btn btn-success" onclick="approveAllContent()">
                        <i class="fas fa-check-double"></i> Approve All Pending Content
                    </button>
                </div>
                
                <div class="stats-overview">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Total Content</h3>
                            <p class="stat-number"><%= content.length %></p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Pending Approval</h3>
                            <p class="stat-number"><%= content.filter(c => !c.isApproved).length %></p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Approved</h3>
                            <p class="stat-number"><%= content.filter(c => c.isApproved).length %></p>
                        </div>
                    </div>
                </div>

                <div class="content-list">
                    <h3><i class="fas fa-list me-2"></i>All Content</h3>
                    
                    <% if (content && content.length > 0) { %>
                        <div class="content-grid">
                            <% content.forEach(item => { %>
                                <div class="content-card <%= item.isApproved ? 'approved' : 'pending' %>">
                                    <div class="content-icon">
                                        <% if (item.fileType.includes('pdf')) { %>
                                            <i class="fas fa-file-pdf"></i>
                                        <% } else if (item.fileType.includes('powerpoint') || item.fileName.includes('.ppt')) { %>
                                            <i class="fas fa-file-powerpoint"></i>
                                        <% } else if (item.fileType.includes('word') || item.fileName.includes('.doc')) { %>
                                            <i class="fas fa-file-word"></i>
                                        <% } else { %>
                                            <i class="fas fa-file"></i>
                                        <% } %>
                                    </div>
                                    <div class="content-info">
                                        <h4><%= item.title %></h4>
                                        <p><%= item.description %></p>
                                        <div class="content-meta">
                                            <span class="content-category"><%= item.category %></span>
                                            <span class="content-teacher">By: <%= item.createdByName %></span>
                                            <span class="content-date"><%= new Date(item.createdAt).toLocaleDateString() %></span>
                                            <span class="content-status <%= item.isApproved ? 'approved' : 'pending' %>">
                                                <i class="fas fa-<%= item.isApproved ? 'check-circle' : 'clock' %>"></i>
                                                <%= item.isApproved ? 'Approved' : 'Pending' %>
                                            </span>
                                        </div>
                                        <div class="content-stats">
                                            <span class="stat-item">
                                                <i class="fas fa-download"></i>
                                                <%= item.downloads %> downloads
                                            </span>
                                            <span class="stat-item">
                                                <i class="fas fa-eye"></i>
                                                <%= item.views %> views
                                            </span>
                                            <span class="stat-item">
                                                <i class="fas fa-file"></i>
                                                <%= (item.fileSize / 1024 / 1024).toFixed(1) %> MB
                                            </span>
                                        </div>
                                    </div>
                                    <div class="content-actions">
                                        <% if (!item.isApproved) { %>
                                            <button class="btn btn-success btn-sm" onclick="approveContent('<%= item._id %>')">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        <% } %>
                                        <a href="<%= item.fileUrl %>" class="btn btn-primary btn-sm" target="_blank" download>
                                            <i class="fas fa-download"></i>
                                        </a>
                                        <button class="btn btn-danger btn-sm" onclick="deleteContent('<%= item._id %>')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-file-alt"></i>
                            <h3>No Content Available</h3>
                            <p>No content has been uploaded yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 SkillOns. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function approveAllContent() {
            if (confirm('Are you sure you want to approve all pending content? This will make all content visible to students.')) {
                fetch('/admin/approve-all-content', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`Successfully approved ${data.modifiedCount} content items!`);
                        location.reload();
                    } else {
                        alert('Error approving content: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error approving content');
                });
            }
        }

        function approveContent(contentId) {
            if (confirm('Are you sure you want to approve this content?')) {
                fetch(`/admin/approve-content/${contentId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error approving content: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error approving content');
                });
            }
        }

        function deleteContent(contentId) {
            if (confirm('Are you sure you want to delete this content? This action cannot be undone.')) {
                fetch(`/admin/delete-content/${contentId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting content: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting content');
                });
            }
        }
    </script>
</body>
</html> 