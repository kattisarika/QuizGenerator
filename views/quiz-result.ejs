<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Result - SkillOns</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        /* Recorrection Section Styles */
        .recorrection-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .recorrection-section h3 {
            color: #1f2937;
            margin-bottom: 20px;
            text-align: center;
        }

        .recorrection-status {
            padding: 25px;
            border-radius: 12px;
            text-align: center;
            border: 2px solid transparent;
        }

        .recorrection-status.pending {
            background: #fef3c7;
            border-color: #f59e0b;
            color: #92400e;
        }

        .recorrection-status.completed {
            background: #d1fae5;
            border-color: #10b981;
            color: #065f46;
        }

        .recorrection-status i {
            font-size: 32px;
            margin-bottom: 15px;
            display: block;
        }

        .recorrection-status h4 {
            font-size: 20px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .recorrection-status p {
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .score-comparison {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }

        .score-item {
            background: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }

        .score-label {
            display: block;
            font-size: 14px;
            color: #6b7280;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .score-value {
            font-size: 18px;
            font-weight: 700;
            display: block;
        }

        .score-value.original {
            color: #6b7280;
        }

        .score-value.updated {
            color: #10b981;
        }

        .score-change {
            font-size: 18px;
            font-weight: 700;
            display: block;
        }

        .score-change.positive {
            color: #10b981;
        }

        .score-change.negative {
            color: #ef4444;
        }

        .score-change.neutral {
            color: #6b7280;
        }

        .teacher-feedback {
            background: white;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
            text-align: left;
        }

        .teacher-feedback h5 {
            color: #065f46;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .teacher-feedback p {
            color: #1f2937;
            line-height: 1.6;
            margin: 0;
        }

        .recorrection-status small {
            display: block;
            font-size: 12px;
            opacity: 0.8;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">SkillOns</a>
            </div>
            <div class="nav-menu">
                <a href="/student/dashboard" class="nav-link">Dashboard</a>
                <a href="/available-quizzes" class="nav-link">Available Quizzes</a>
                <a href="/my-results" class="nav-link">My Results</a>

                <a href="/logout" class="nav-link logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="result-container">
            <!-- Result Header -->
            <div class="result-header">
                <div class="result-title">
                    <h1><i class="fas fa-trophy me-2"></i>Quiz Result</h1>
                    <h2><%= result.quizTitle %></h2>
                </div>
                <div class="result-score">
                    <div class="score-circle <%= result.percentage >= 80 ? 'excellent' : result.percentage >= 60 ? 'good' : result.percentage >= 40 ? 'average' : 'poor' %>">
                        <span class="score-percentage"><%= result.percentage %>%</span>
                        <span class="score-label">Score</span>
                    </div>
                </div>
            </div>

            <!-- Result Summary -->
            <div class="result-summary">
                <div class="summary-grid">
                    <div class="summary-item">
                        <i class="fas fa-check-circle"></i>
                        <div class="summary-content">
                            <h4>Correct Answers</h4>
                            <p><%= result.correctAnswers %> of <%= result.totalQuestions %></p>
                        </div>
                    </div>
                    
                    <div class="summary-item">
                        <i class="fas fa-star"></i>
                        <div class="summary-content">
                            <h4>Points Earned</h4>
                            <p><%= result.score %> of <%= result.totalPoints %></p>
                        </div>
                    </div>
                    
                    <div class="summary-item">
                        <i class="fas fa-clock"></i>
                        <div class="summary-content">
                            <h4>Time Taken</h4>
                            <p><%= Math.floor(result.timeTaken / 60) %>m <%= result.timeTaken % 60 %>s</p>
                        </div>
                    </div>
                    
                    <div class="summary-item">
                        <i class="fas fa-calendar"></i>
                        <div class="summary-content">
                            <h4>Completed</h4>
                            <p><%= new Date(result.completedAt).toLocaleDateString() %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Analysis -->
            <div class="result-analysis">
                <h3><i class="fas fa-chart-bar me-2"></i>Question Analysis</h3>
                
                <div class="questions-analysis">
                    <% result.answers.forEach((answer, index) => { %>
                        <div class="question-analysis <%= answer.isCorrect ? 'correct' : 'incorrect' %>">
                            <div class="question-header">
                                <h4>Question <%= answer.questionIndex + 1 %></h4>
                                <span class="question-status">
                                    <i class="fas fa-<%= answer.isCorrect ? 'check' : 'times' %>"></i>
                                    <%= answer.isCorrect ? 'Correct' : 'Incorrect' %>
                                </span>
                            </div>
                            
                            <div class="answer-details">
                                <div class="answer-item">
                                    <strong>Your Answer:</strong>
                                    <span class="<%= answer.isCorrect ? 'correct-answer' : 'incorrect-answer' %>">
                                        <%= answer.selectedAnswer || 'Not answered' %>
                                    </span>
                                </div>
                                
                                <% if (!answer.isCorrect) { %>
                                    <div class="answer-item">
                                        <strong>Correct Answer:</strong>
                                        <span class="correct-answer"><%= answer.correctAnswer %></span>
                                    </div>
                                <% } %>
                                
                                <div class="answer-item">
                                    <strong>Points:</strong>
                                    <span><%= answer.isCorrect ? answer.points : 0 %> / <%= answer.points %></span>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- Performance Insights -->
            <div class="performance-insights">
                <h3><i class="fas fa-lightbulb me-2"></i>Performance Insights</h3>
                
                <div class="insights-grid">
                    <div class="insight-item">
                        <i class="fas fa-chart-line"></i>
                        <h4>Score Analysis</h4>
                        <p>You scored <%= result.score %> out of <%= result.totalPoints %> points, achieving <%= result.percentage %>% accuracy.</p>
                    </div>
                    
                    <div class="insight-item">
                        <i class="fas fa-target"></i>
                        <h4>Accuracy</h4>
                        <p>You answered <%= result.correctAnswers %> out of <%= result.totalQuestions %> questions correctly.</p>
                    </div>
                    
                    <div class="insight-item">
                        <i class="fas fa-clock"></i>
                        <h4>Time Management</h4>
                        <p>You completed the quiz in <%= Math.floor(result.timeTaken / 60) %> minutes and <%= result.timeTaken % 60 %> seconds.</p>
                    </div>
                </div>
            </div>

            <!-- Recorrection Status and Feedback -->
            <% if (result.recorrectionRequested || result.status === 'rechecked') { %>
                <div class="recorrection-section">
                    <h3><i class="fas fa-redo me-2"></i>Recorrection Information</h3>
                    
                    <% if (result.status === 'pending-recorrection') { %>
                        <div class="recorrection-status pending">
                            <i class="fas fa-clock"></i>
                            <h4>Recorrection Requested</h4>
                            <p>Your quiz has been sent for recorrection. The teacher will review your answers and provide feedback.</p>
                            <small>Requested on: <%= new Date(result.recorrectionRequestedAt).toLocaleDateString() %></small>
                        </div>
                    <% } else if (result.status === 'rechecked') { %>
                        <div class="recorrection-status completed">
                            <i class="fas fa-check-double"></i>
                            <h4>Recorrection Completed</h4>
                            <div class="score-comparison">
                                <div class="score-item">
                                    <span class="score-label">Original Score:</span>
                                    <span class="score-value original"><%= result.originalScore %> / <%= result.totalPoints %></span>
                                </div>
                                <div class="score-item">
                                    <span class="score-label">Updated Score:</span>
                                    <span class="score-value updated"><%= result.score %> / <%= result.totalPoints %></span>
                                </div>
                                <div class="score-item">
                                    <span class="score-label">Score Change:</span>
                                    <span class="score-change <%= result.score > result.originalScore ? 'positive' : result.score < result.originalScore ? 'negative' : 'neutral' %>">
                                        <%= result.score > result.originalScore ? '+' : '' %><%= result.score - result.originalScore %> points
                                    </span>
                                </div>
                            </div>
                            
                            <% if (result.teacherFeedback) { %>
                                <div class="teacher-feedback">
                                    <h5><i class="fas fa-comment"></i> Teacher Feedback:</h5>
                                    <p><%= result.teacherFeedback %></p>
                                </div>
                            <% } %>
                            
                            <small>Recorrection completed on: <%= new Date(result.recorrectionCompletedAt).toLocaleDateString() %></small>
                        </div>
                    <% } %>
                </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="result-actions">
                <a href="/available-quizzes" class="btn btn-primary">
                    <i class="fas fa-play"></i> Take Another Quiz
                </a>
                <a href="/my-results" class="btn btn-secondary">
                    <i class="fas fa-list"></i> View All Results
                </a>
                <a href="/student/dashboard" class="btn btn-outline">
                    <i class="fas fa-home"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 SkillOns. All rights reserved.</p>
        </div>
    </footer>
</body>
</html> 