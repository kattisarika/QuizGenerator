<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View PowerPoint - <%= content.title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">SkillOns</a>
            </div>
            <div class="nav-menu">
                <a href="/student/dashboard" class="nav-link">Dashboard</a>
                <a href="/student/study-material" class="nav-link">View Study Material</a>

                <a href="/logout" class="nav-link logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="powerpoint-viewer-section">
                <div class="viewer-header">
                    <h1><i class="fas fa-file-powerpoint me-2"></i><%= content.title %></h1>
                    <p class="file-info">
                        <i class="fas fa-file-powerpoint"></i>
                        <%= content.fileName %> • <%= (content.fileSize / 1024 / 1024).toFixed(1) %> MB
                    </p>
                </div>

                <div class="viewer-content">
                    <div class="viewer-options">
                        <div class="option-card">
                            <div class="option-icon">
                                <i class="fas fa-eye"></i>
                            </div>
                            <div class="option-content">
                                <h3>View in Browser</h3>
                                <p>View the presentation directly in your browser using embedded viewers</p>
                                <button onclick="openEmbeddedViewer()" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View in Browser
                                </button>
                            </div>
                        </div>

                        <div class="option-card">
                            <div class="option-icon">
                                <i class="fas fa-microsoft"></i>
                            </div>
                            <div class="option-content">
                                <h3>Microsoft Office Online</h3>
                                <p>View and edit in Microsoft Office Online</p>
                                <a href="https://office.live.com/start/PowerPoint.aspx" class="btn btn-info" target="_blank">
                                    <i class="fas fa-microsoft"></i> Office Online
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="viewer-info">
                        <h3><i class="fas fa-info-circle me-2"></i>About PowerPoint Files</h3>
                        <p>PowerPoint presentations (.ppt, .pptx) cannot be viewed directly in most web browsers. To view this presentation, you can:</p>
                        <ul>
                            <li><strong>Download the file</strong> and open it with Microsoft PowerPoint, Google Slides, or similar software</li>
                            <li><strong>Use online viewers</strong> like Google Slides or Microsoft Office Online</li>
                            <li><strong>Convert to PDF</strong> if you have PowerPoint installed (File → Export → Create PDF)</li>
                        </ul>
                    </div>
                </div>

                <div class="viewer-actions">
                    <a href="/student/study-material" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Study Material
                    </a>
                </div>
            </div>
        </div>
    </main>

    <!-- Embedded Viewer Modal -->
    <div id="embeddedViewerModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2><%= content.title %></h2>
                <span class="close" onclick="closeEmbeddedViewer()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="viewer-tabs">
                    <button class="tab-btn active" onclick="switchViewer('direct')">View File</button>
                </div>
                <div id="viewerContainer" class="viewer-container">
                    <div id="loadingMessage" class="loading-message">
                        <i class="fas fa-spinner fa-spin"></i>
                        <p>Loading viewer...</p>
                        <button onclick="retryViewer()" class="btn btn-secondary btn-sm" style="margin-top: 10px;">Retry</button>
                    </div>
                    <div id="errorMessage" class="error-message" style="display: none;">
                        <i class="fas fa-exclamation-triangle"></i>
                        <p>Unable to load viewer. The file may not be compatible with online viewers.</p>
                        <div class="error-actions">
                            <a href="/student/download-content/<%= content._id %>" class="btn btn-primary">Download File</a>
                            <button onclick="retryViewer()" class="btn btn-secondary">Try Again</button>
                        </div>
                    </div>
                    <div id="fileViewer" class="file-viewer" style="display: none;">
                        <div class="file-info">
                            <h3><%= content.title %></h3>
                            <p><i class="fas fa-file-<%= content.fileName.toLowerCase().includes('.pdf') ? 'pdf' : content.fileName.toLowerCase().includes('.ppt') ? 'powerpoint' : 'word' %>"></i> <%= content.fileName %></p>
                            <p class="file-size"><%= (content.fileSize / 1024 / 1024).toFixed(1) %> MB</p>
                        </div>
                        <div class="viewer-options">
                            <div class="viewer-option">
                                <h4>Download & View</h4>
                                <p>Download the file and open it with the appropriate application</p>
                                <a href="/student/download-content/<%= content._id %>" class="btn btn-primary">
                                    <i class="fas fa-download"></i> Download File
                                </a>
                            </div>
                            <div class="viewer-option">
                                <h4>View Online</h4>
                                <p>Open in external online viewers</p>
                                <div class="external-viewers">
                                    <a href="https://view.officeapps.live.com/op/embed.aspx?src=<%= encodeURIComponent('https://skillons.herokuapp.com/public-file/' + content._id) %>" target="_blank" class="btn btn-secondary">
                                        <i class="fas fa-microsoft"></i> Microsoft Office Online
                                    </a>
                                    <a href="https://docs.google.com/viewer?url=<%= encodeURIComponent('https://skillons.herokuapp.com/public-file/' + content._id) %>&embedded=true" target="_blank" class="btn btn-secondary">
                                        <i class="fas fa-google"></i> Google Docs Viewer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 SkillOns. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function openEmbeddedViewer() {
            document.getElementById('embeddedViewerModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
            
            // Show loading message briefly, then show file viewer
            document.getElementById('loadingMessage').style.display = 'flex';
            setTimeout(function() {
                document.getElementById('loadingMessage').style.display = 'none';
                document.getElementById('fileViewer').style.display = 'block';
            }, 1000);
        }

        function closeEmbeddedViewer() {
            document.getElementById('embeddedViewerModal').style.display = 'none';
            document.body.style.overflow = 'auto';
            
            // Reset viewer
            document.getElementById('loadingMessage').style.display = 'none';
            document.getElementById('fileViewer').style.display = 'none';
        }

        function hideLoading() {
            document.getElementById('loadingMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
        }

        function showError() {
            document.getElementById('loadingMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'flex';
        }

        function retryViewer() {
            // Reload the file viewer
            document.getElementById('fileViewer').style.display = 'none';
            document.getElementById('loadingMessage').style.display = 'flex';
            setTimeout(function() {
                document.getElementById('loadingMessage').style.display = 'none';
                document.getElementById('fileViewer').style.display = 'block';
            }, 1000);
        }

        function switchViewer(type) {
            // Since we only have one viewer now, just ensure it's visible
            document.getElementById('fileViewer').style.display = 'block';
            document.querySelector('.tab-btn').classList.add('active');
        }

        function switchViewer(type) {
            // Hide all viewers
            document.getElementById('microsoftViewer').style.display = 'none';
            document.getElementById('googleViewer').style.display = 'none';
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            
            // Show selected viewer and activate tab
            if (type === 'microsoft') {
                document.getElementById('microsoftViewer').style.display = 'block';
                event.target.classList.add('active');
            } else if (type === 'google') {
                document.getElementById('googleViewer').style.display = 'block';
                event.target.classList.add('active');
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('embeddedViewerModal');
            if (event.target === modal) {
                closeEmbeddedViewer();
            }
        }

        // Prevent iframe from opening new windows
        window.addEventListener('message', function(event) {
            // Block any attempts to open new windows from iframes
            if (event.data && event.data.type === 'openWindow') {
                event.preventDefault();
                return false;
            }
        });
    </script>
</body>
</html> 