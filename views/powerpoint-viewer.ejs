<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View PowerPoint - <%= content.title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">Take Quiz Now!</a>
            </div>
            <div class="nav-menu">
                <a href="/student/dashboard" class="nav-link">Dashboard</a>
                <a href="/student/study-material" class="nav-link">View Study Material</a>
                <a href="/select-role" class="nav-link">Change Role</a>
                <a href="/logout" class="nav-link logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="powerpoint-viewer-section">
                <div class="viewer-header">
                    <h1><i class="fas fa-file-powerpoint me-2"></i><%= content.title %></h1>
                    <p class="file-info">
                        <i class="fas fa-file-powerpoint"></i>
                        <%= content.fileName %> • <%= (content.fileSize / 1024 / 1024).toFixed(1) %> MB
                    </p>
                </div>

                <div class="viewer-content">
                    <div class="viewer-options">
                        <div class="option-card">
                            <div class="option-icon">
                                <i class="fas fa-download"></i>
                            </div>
                            <div class="option-content">
                                <h3>Download & View</h3>
                                <p>Download the PowerPoint file and open it with Microsoft PowerPoint or similar software</p>
                                <a href="/student/download-content/<%= content._id %>" class="btn btn-primary">
                                    <i class="fas fa-download"></i> Download PowerPoint
                                </a>
                            </div>
                        </div>

                        <div class="option-card">
                            <div class="option-icon">
                                <i class="fas fa-eye"></i>
                            </div>
                            <div class="option-content">
                                <h3>View in Browser</h3>
                                <p>View the presentation directly in your browser using embedded viewers</p>
                                <button onclick="openEmbeddedViewer()" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View in Browser
                                </button>
                            </div>
                        </div>

                        <div class="option-card">
                            <div class="option-icon">
                                <i class="fas fa-google"></i>
                            </div>
                            <div class="option-content">
                                <h3>Google Slides</h3>
                                <p>Upload to Google Slides for online viewing and editing</p>
                                <a href="https://slides.google.com" class="btn btn-success" target="_blank">
                                    <i class="fas fa-google"></i> Open Google Slides
                                </a>
                            </div>
                        </div>

                        <div class="option-card">
                            <div class="option-icon">
                                <i class="fas fa-microsoft"></i>
                            </div>
                            <div class="option-content">
                                <h3>Microsoft Office Online</h3>
                                <p>View and edit in Microsoft Office Online</p>
                                <a href="https://office.live.com/start/PowerPoint.aspx" class="btn btn-info" target="_blank">
                                    <i class="fas fa-microsoft"></i> Office Online
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="viewer-info">
                        <h3><i class="fas fa-info-circle me-2"></i>About PowerPoint Files</h3>
                        <p>PowerPoint presentations (.ppt, .pptx) cannot be viewed directly in most web browsers. To view this presentation, you can:</p>
                        <ul>
                            <li><strong>Download the file</strong> and open it with Microsoft PowerPoint, Google Slides, or similar software</li>
                            <li><strong>Use online viewers</strong> like Google Slides or Microsoft Office Online</li>
                            <li><strong>Convert to PDF</strong> if you have PowerPoint installed (File → Export → Create PDF)</li>
                        </ul>
                    </div>
                </div>

                <div class="viewer-actions">
                    <a href="/student/study-material" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Study Material
                    </a>
                    <a href="/student/download-content/<%= content._id %>" class="btn btn-primary">
                        <i class="fas fa-download"></i> Download File
                    </a>
                </div>
            </div>
        </div>
    </main>

    <!-- Embedded Viewer Modal -->
    <div id="embeddedViewerModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2><%= content.title %></h2>
                <span class="close" onclick="closeEmbeddedViewer()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="viewer-tabs">
                    <button class="tab-btn active" onclick="switchViewer('microsoft')">Microsoft Office Online</button>
                    <button class="tab-btn" onclick="switchViewer('google')">Google Docs Viewer</button>
                    <button class="tab-btn" onclick="switchViewer('pdf')">Direct PDF View</button>
                </div>
                <div id="viewerContainer" class="viewer-container">
                    <div id="loadingMessage" class="loading-message">
                        <i class="fas fa-spinner fa-spin"></i>
                        <p>Loading viewer...</p>
                    </div>
                    <iframe id="microsoftViewer" class="viewer-iframe" src="https://view.officeapps.live.com/op/embed.aspx?src=<%= encodeURIComponent('https://skillons.herokuapp.com/public-file/' + content._id) %>&wdStartOn=1" style="display: none;" onload="hideLoading()" sandbox="allow-scripts allow-same-origin allow-forms" allowfullscreen></iframe>
                    <iframe id="googleViewer" class="viewer-iframe" src="https://docs.google.com/viewer?url=<%= encodeURIComponent('https://skillons.herokuapp.com/public-file/' + content._id) %>&embedded=true&chrome=false" style="display: none;" onload="hideLoading()" sandbox="allow-scripts allow-same-origin allow-forms" allowfullscreen></iframe>
                    <iframe id="pdfViewer" class="viewer-iframe" src="https://skillons.herokuapp.com/public-file/<%= content._id %>" style="display: none;" onload="hideLoading()" sandbox="allow-scripts allow-same-origin allow-forms" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2024 Take Quiz Now!. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function openEmbeddedViewer() {
            document.getElementById('embeddedViewerModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
            
            // Show loading message and start with Microsoft viewer
            document.getElementById('loadingMessage').style.display = 'flex';
            document.getElementById('microsoftViewer').style.display = 'block';
        }

        function closeEmbeddedViewer() {
            document.getElementById('embeddedViewerModal').style.display = 'none';
            document.body.style.overflow = 'auto';
            
            // Reset viewers
            document.getElementById('loadingMessage').style.display = 'none';
            document.getElementById('googleViewer').style.display = 'none';
            document.getElementById('microsoftViewer').style.display = 'none';
            document.getElementById('pdfViewer').style.display = 'none';
        }

        function hideLoading() {
            document.getElementById('loadingMessage').style.display = 'none';
        }

        function switchViewer(type) {
            // Show loading message
            document.getElementById('loadingMessage').style.display = 'flex';
            
            // Hide all viewers
            document.getElementById('googleViewer').style.display = 'none';
            document.getElementById('microsoftViewer').style.display = 'none';
            document.getElementById('pdfViewer').style.display = 'none';
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            
            // Show selected viewer and activate tab
            if (type === 'google') {
                document.getElementById('googleViewer').style.display = 'block';
                event.target.classList.add('active');
            } else if (type === 'microsoft') {
                document.getElementById('microsoftViewer').style.display = 'block';
                event.target.classList.add('active');
            } else if (type === 'pdf') {
                document.getElementById('pdfViewer').style.display = 'block';
                event.target.classList.add('active');
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('embeddedViewerModal');
            if (event.target === modal) {
                closeEmbeddedViewer();
            }
        }

        // Prevent iframe from opening new windows
        window.addEventListener('message', function(event) {
            // Block any attempts to open new windows from iframes
            if (event.data && event.data.type === 'openWindow') {
                event.preventDefault();
                return false;
            }
        });
    </script>
</body>
</html> 