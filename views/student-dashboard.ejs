    <main class="main-content" id="main-content" role="main" tabindex="-1">
        <div class="dashboard-container">
            <div class="dashboard-header">
                <div class="user-info">
                    <% if (user.photos && user.photos.length > 0) { %>
                        <img src="<%= user.photos[0].value %>" alt="Profile photo of <%= user.displayName %>" class="user-avatar">
                    <% } else { %>
                        <div class="user-avatar-placeholder" aria-label="Default profile avatar">
                            <i class="fas fa-user-graduate" aria-hidden="true"></i>
                        </div>
                    <% } %>
                    <div class="user-details">
                        <h1 id="welcome-heading">Welcome, <%= user.displayName %>!</h1>
                        <p id="user-email"><%= user.email %></p>
                        <span class="role-badge student-badge" aria-label="Role: Student">Student</span>
                    </div>
                </div>
            </div>

            <div class="dashboard-content">
                <section class="stats-grid" aria-labelledby="stats-heading">
                    <h2 id="stats-heading" class="sr-only">Dashboard Statistics</h2>
                    <div class="stat-card" role="region" aria-labelledby="quizzes-stat">
                        <div class="stat-icon" aria-hidden="true">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="stat-info">
                            <h3 id="quizzes-stat">Available Quizzes</h3>
                            <p class="stat-number" aria-label="Number of available quizzes"><%= quizzes.length %></p>
                        </div>
                    </div>

                    <div class="stat-card" role="region" aria-labelledby="completed-stat">
                        <div class="stat-icon" aria-hidden="true">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-info">
                            <h3 id="completed-stat">Completed</h3>
                            <p class="stat-number" aria-label="Number of completed quizzes"><%= completedCount %></p>
                        </div>
                    </div>

                    <div class="stat-card" role="region" aria-labelledby="score-stat">
                        <div class="stat-icon" aria-hidden="true">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="stat-info">
                            <h3 id="score-stat">Average Score</h3>
                            <p class="stat-number" aria-label="Average quiz score"><%= averageScore > 0 ? averageScore + '%' : '--' %></p>
                        </div>
                    </div>
                </section>

                <!-- Badge System Section -->
                <section class="badge-system" aria-labelledby="badges-heading">
                    <div class="section-header">
                        <h2 id="badges-heading">
                            <i class="fas fa-medal" aria-hidden="true"></i> My Badges
                        </h2>
                        <p>Track your achievements and progress across subjects</p>
                    </div>
                    
                    <div class="badge-summary" id="badgeSummary">
                        <div class="loading-state">
                            <i class="fas fa-spinner fa-spin" aria-hidden="true"></i>
                            <p>Loading badges...</p>
                        </div>
                    </div>
                </section>

                <section class="action-cards" aria-labelledby="actions-heading">
                    <h2 id="actions-heading" class="sr-only">Quick Actions</h2>
                    <div class="action-card" role="region" aria-labelledby="quiz-action">
                        <div style="font-size: 48px; margin-bottom: 15px; color: var(--primary-color);" aria-hidden="true">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3 id="quiz-action">Take a Quiz</h3>
                        <p>Browse and take available quizzes to test your knowledge</p>
                        <a href="/available-quizzes" class="btn btn-primary" aria-label="Browse and take available quizzes">
                            <i class="fas fa-arrow-right" aria-hidden="true"></i> Browse Quizzes
                        </a>
                    </div>

                    <div class="action-card" role="region" aria-labelledby="competitive-action">
                        <div style="font-size: 48px; margin-bottom: 15px; background: linear-gradient(135deg, #667eea, #764ba2); -webkit-background-clip: text; -webkit-text-fill-color: transparent;" aria-hidden="true">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <h3 id="competitive-action">Competitive Quiz</h3>
                        <p>Join live competitive sessions and compete with classmates</p>
                        <a href="/join-competitive" class="btn btn-primary" aria-label="Join live competitive quiz sessions">
                            <i class="fas fa-bolt" aria-hidden="true"></i> Join Session
                        </a>
                    </div>

                    <div class="action-card" role="region" aria-labelledby="results-action">
                        <div style="font-size: 48px; margin-bottom: 15px; color: var(--success-color);" aria-hidden="true">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3 id="results-action">My Results</h3>
                        <p>Track your progress and review past quiz performances</p>
                        <a href="/my-results" class="btn btn-secondary" aria-label="View your quiz results and progress">
                            <i class="fas fa-chart-bar" aria-hidden="true"></i> View Results
                        </a>
                    </div>

                    <!-- Complex Quiz Results Card -->
                    <% if (pendingComplexQuizzes && pendingComplexQuizzes.length > 0) { %>
                        <div class="action-card" role="region" aria-labelledby="complex-pending-action" style="border-left: 4px solid #f59e0b;">
                            <div style="font-size: 48px; margin-bottom: 15px; color: #f59e0b;" aria-hidden="true">
                                <i class="fas fa-hourglass-half"></i>
                            </div>
                            <h3 id="complex-pending-action">Pending Complex Quiz Results</h3>
                            <p><%= pendingComplexQuizzes.length %> complex quiz<%= pendingComplexQuizzes.length > 1 ? 's' : '' %> awaiting teacher review</p>
                            <div style="margin-bottom: 15px;">
                                <% pendingComplexQuizzes.slice(0, 3).forEach(result => { %>
                                    <div style="background: #fef3c7; padding: 8px 12px; margin: 5px 0; border-radius: 6px; font-size: 14px; color: #92400e;">
                                        <i class="fas fa-clock"></i> <%= result.quiz.title %>
                                    </div>
                                <% }); %>
                                <% if (pendingComplexQuizzes.length > 3) { %>
                                    <div style="font-size: 12px; color: #6b7280; margin-top: 8px;">
                                        + <%= pendingComplexQuizzes.length - 3 %> more pending...
                                    </div>
                                <% } %>
                            </div>
                            <a href="/my-results" class="btn btn-warning" aria-label="View pending complex quiz results">
                                <i class="fas fa-eye" aria-hidden="true"></i> View Pending Results
                            </a>
                        </div>
                    <% } %>

                    <% if (gradedComplexQuizzes && gradedComplexQuizzes.length > 0) { %>
                        <div class="action-card" role="region" aria-labelledby="complex-graded-action" style="border-left: 4px solid #10b981;">
                            <div style="font-size: 48px; margin-bottom: 15px; background: linear-gradient(135deg, #667eea, #764ba2); -webkit-background-clip: text; -webkit-text-fill-color: transparent;" aria-hidden="true">
                                <i class="fas fa-clipboard-check"></i>
                            </div>
                            <h3 id="complex-graded-action">New Complex Quiz Results</h3>
                            <p><%= gradedComplexQuizzes.length %> complex quiz<%= gradedComplexQuizzes.length > 1 ? 's' : '' %> graded by your teacher</p>
                            <div style="margin-bottom: 15px;">
                                <% gradedComplexQuizzes.slice(0, 3).forEach(result => { %>
                                    <div style="background: #d1fae5; padding: 8px 12px; margin: 5px 0; border-radius: 6px; font-size: 14px; color: #065f46; display: flex; justify-content: space-between; align-items: center;">
                                        <span><i class="fas fa-check-circle"></i> <%= result.quiz.title %></span>
                                        <span style="font-weight: 600;">
                                            <%= result.manualPercentage || result.percentage %>%
                                            <% if (result.manualPercentage >= 100) { %>
                                                <i class="fas fa-crown" style="color: #8B5CF6; margin-left: 4px;" title="Purple Badge"></i>
                                            <% } else if (result.manualPercentage >= 90) { %>
                                                <i class="fas fa-medal" style="color: #EF4444; margin-left: 4px;" title="Red Badge"></i>
                                            <% } else if (result.manualPercentage >= 80) { %>
                                                <i class="fas fa-star" style="color: #10B981; margin-left: 4px;" title="Green Badge"></i>
                                            <% } %>
                                        </span>
                                    </div>
                                <% }); %>
                                <% if (gradedComplexQuizzes.length > 3) { %>
                                    <div style="font-size: 12px; color: #6b7280; margin-top: 8px;">
                                        + <%= gradedComplexQuizzes.length - 3 %> more results...
                                    </div>
                                <% } %>
                            </div>
                            <a href="/my-results" class="btn btn-success" aria-label="View graded complex quiz results">
                                <i class="fas fa-trophy" aria-hidden="true"></i> View Results & Badges
                            </a>
                        </div>
                    <% } %>

                    <div class="action-card" role="region" aria-labelledby="material-action">
                        <div style="font-size: 48px; margin-bottom: 15px; color: var(--warning-color);" aria-hidden="true">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h3 id="material-action">Study Material</h3>
                        <p>Access educational resources shared by your teachers</p>
                        <a href="/student/study-material" class="btn btn-secondary" aria-label="Access study materials shared by teachers">
                            <i class="fas fa-folder-open" aria-hidden="true"></i> View Material
                        </a>
                    </div>

                    <div class="action-card" role="region" aria-labelledby="podcast-action">
                        <div style="font-size: 48px; margin-bottom: 15px; color: var(--secondary-color);" aria-hidden="true">
                            <i class="fas fa-podcast"></i>
                        </div>
                        <h3 id="podcast-action">Educational Podcasts</h3>
                        <p>Listen to audio lessons and educational content from your teachers</p>
                        <button onclick="showPodcastsSection()" class="btn btn-primary" aria-label="Browse and listen to educational podcasts">
                            <i class="fas fa-headphones" aria-hidden="true"></i> Browse Podcasts
                        </button>
                    </div>


                </section>

                <!-- Podcasts Section -->
                <section id="podcastsSection" class="podcasts-section" style="display: none;" aria-labelledby="podcasts-heading">
                    <div class="section-header">
                        <h2 id="podcasts-heading"><i class="fas fa-podcast" aria-hidden="true"></i> Educational Podcasts</h2>
                        <p>Listen to audio lessons created by your teachers</p>
                    </div>
                    
                    <div class="podcast-filters" role="group" aria-labelledby="filter-heading">
                        <h3 id="filter-heading" class="sr-only">Filter Podcasts</h3>
                        <div class="filter-group">
                            <label for="gradeFilter">Grade Level:</label>
                            <select id="gradeFilter" onchange="filterPodcasts()" aria-label="Filter podcasts by grade level">
                                <option value="all">All Grades</option>
                                <option value="1st grade">1st Grade</option>
                                <option value="2nd grade">2nd Grade</option>
                                <option value="3rd grade">3rd Grade</option>
                                <option value="4th grade">4th Grade</option>
                                <option value="5th grade">5th Grade</option>
                                <option value="6th grade">6th Grade</option>
                                <option value="7th grade">7th Grade</option>
                                <option value="8th grade">8th Grade</option>
                                <option value="9th grade">9th Grade</option>
                                <option value="10th grade">10th Grade</option>
                                <option value="11th grade">11th Grade</option>
                                <option value="12th grade">12th Grade</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label for="subjectFilter">Subject:</label>
                            <select id="subjectFilter" onchange="filterPodcasts()" aria-label="Filter podcasts by subject">
                                <option value="all">All Subjects</option>
                                <option value="English">English</option>
                                <option value="Science">Science</option>
                                <option value="Math">Math</option>
                                <option value="History">History</option>
                                <option value="Geography">Geography</option>
                                <option value="Literature">Literature</option>
                                <option value="Art">Art</option>
                                <option value="Music">Music</option>
                                <option value="Physical Education">Physical Education</option>
                                <option value="Computer Science">Computer Science</option>
                            </select>
                        </div>
                    </div>
                    
                    <div id="podcastsContainer" class="podcasts-container" role="region" aria-live="polite" aria-label="Podcast list">
                        <div class="loading-state">
                            <i class="fas fa-spinner fa-spin" aria-hidden="true"></i>
                            <p>Loading podcasts...</p>
                        </div>
                    </div>
                </section>

                <!-- Whiteboard Section -->


                <% if (typeof needsMigration !== 'undefined' && needsMigration) { %>
                <div class="alert alert-warning">
                    <h5><i class="fas fa-exclamation-triangle me-2"></i>Account Migration Available</h5>
                    <p>We found multiple accounts for your email. You can merge them to see content from all your organizations in one place.</p>
                    <button class="btn btn-primary" onclick="migrateAccount()">
                        <i class="fas fa-sync me-1"></i>Merge My Accounts
                    </button>
                </div>
                <% } %>

                <% if (organizations && organizations.length > 1) { %>
                <div class="organization-info">
                    <h3><i class="fas fa-school me-2"></i>Your Organizations</h3>
                    <div class="org-badges">
                        <% organizations.forEach(org => { %>
                            <span class="badge bg-primary me-2 mb-2">
                                <i class="fas fa-building me-1"></i><%= org.name %>
                            </span>
                        <% }); %>
                    </div>
                    <p class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        You're enrolled in <%= organizations.length %> organization(s). Quizzes from all your organizations are shown below.
                    </p>
                </div>
                <% } %>

