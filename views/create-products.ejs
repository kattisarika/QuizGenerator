    <script>
        // Question generation functionality
        async function generateCalculusQuestions() {
            const difficulty = document.querySelector('input[name="difficulty"]:checked').value;
            const questionCount = document.getElementById('questionCount').value;
            const questionType = document.getElementById('questionType').value;

            const loadingIndicator = document.getElementById('loadingIndicator');
            const generateBtn = document.querySelector('.btn-primary');
            const generatedQuestionsDiv = document.getElementById('generatedQuestions');

            // Show loading state
            loadingIndicator.style.display = 'block';
            generateBtn.disabled = true;
            generateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';

            try {
                const response = await fetch('/api/generate-calculus-questions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        difficulty: difficulty,
                        questionCount: parseInt(questionCount),
                        questionType: questionType,
                        subject: 'calculus'
                    })
                });

                if (!response.ok) {
                    throw new Error('Failed to generate questions');
                }

                const data = await response.json();
                displayGeneratedQuestions(data.questions);

            } catch (error) {
                console.error('Error generating questions:', error);
                alert('Failed to generate questions. Please try again.');
            } finally {
                // Hide loading state
                loadingIndicator.style.display = 'none';
                generateBtn.disabled = false;
                generateBtn.innerHTML = '<i class="fas fa-magic"></i> Generate Calculus Questions';
            }
        }

        function displayGeneratedQuestions(questions) {
            const questionsContent = document.getElementById('questionsContent');
            const generatedQuestionsDiv = document.getElementById('generatedQuestions');

            let questionsHTML = '';

            questions.forEach((question, index) => {
                questionsHTML += `
                    <div class="question-item" data-question-index="${index}">
                        <div class="question-number">
                            Question ${index + 1}
                            <div class="question-controls">
                                <button class="control-btn edit-btn" onclick="editQuestion(${index})">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="control-btn blank-btn" onclick="createBlanks(${index})">
                                    <i class="fas fa-minus"></i> Add Blanks
                                </button>
                                <button class="control-btn remove-answer-btn" onclick="toggleAnswer(${index})">
                                    <i class="fas fa-eye-slash"></i> Hide Answer
                                </button>
                            </div>
                        </div>
                        <div class="question-text" id="question-text-${index}">${question.question}</div>
                        ${question.options ? `
                            <ol class="question-options" id="question-options-${index}">
                                ${question.options.map((option, optIndex) => `
                                    <li>
                                        <span class="option-text" id="option-${index}-${optIndex}">
                                            <span class="option-content">${option.replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;')}</span>
                                            <button class="control-btn edit-btn" onclick="editOption(${index}, ${optIndex})" style="margin-left: 10px; font-size: 10px; padding: 2px 6px;">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </span>
                                    </li>
                                `).join('')}
                            </ol>
                        ` : ''}
                        <div class="question-answer" id="question-answer-${index}">
                            <strong>Answer:</strong> <span id="answer-text-${index}">${question.answer}</span>
                        </div>
                        ${question.explanation ? `
                            <div class="question-explanation" id="question-explanation-${index}">
                                <strong>Explanation:</strong> <span id="explanation-text-${index}">${question.explanation}</span>
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            questionsContent.innerHTML = questionsHTML;
            generatedQuestionsDiv.style.display = 'block';

            // Store questions data globally for editing
            window.generatedQuestions = questions;

            // Render LaTeX expressions
            if (window.MathJax) {
                MathJax.typesetPromise([questionsContent]).catch((err) => console.log(err.message));
            }

            // Scroll to generated questions
            generatedQuestionsDiv.scrollIntoView({ behavior: 'smooth' });
        }

        function exportQuestions() {
            const difficulty = document.querySelector('input[name="difficulty"]:checked').value;
            const questionCount = document.getElementById('questionCount').value;

            // Get current state of questions (including edits)
            const currentQuestions = window.generatedQuestions || [];

            let questionsHTML = '';
            currentQuestions.forEach((question, index) => {
                const questionElement = document.getElementById(`question-text-${index}`);
                const answerElement = document.getElementById(`answer-text-${index}`);
                const explanationElement = document.getElementById(`explanation-text-${index}`);
                const answerDiv = document.getElementById(`question-answer-${index}`);

                const currentQuestion = questionElement ? questionElement.innerHTML : question.question;
                const currentAnswer = answerElement ? answerElement.innerHTML : question.answer;
                const currentExplanation = explanationElement ? explanationElement.innerHTML : question.explanation;
                const isAnswerHidden = answerDiv ? answerDiv.classList.contains('hidden') : false;

                questionsHTML += `
                    <div style="margin-bottom: 25px; page-break-inside: avoid;">
                        <div style="font-weight: bold; color: #4F46E5; margin-bottom: 10px;">Question ${index + 1}</div>
                        <div style="margin-bottom: 15px; line-height: 1.6;">${currentQuestion}</div>
                        ${!isAnswerHidden ? `
                            <div style="background: #e0f2fe; padding: 10px; border-radius: 5px; margin-top: 15px;">
                                <strong>Answer:</strong> ${currentAnswer}
                            </div>
                        ` : ''}
                        ${currentExplanation ? `
                            <div style="background: #f0f9ff; padding: 10px; border-radius: 5px; margin-top: 10px;">
                                <strong>Explanation:</strong> ${currentExplanation}
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            // Create a new window for printing
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Calculus Questions - ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} Level</title>
                    <style>
                        body { font-family: Arial, sans-serif; margin: 20px; }
                        .header { text-align: center; margin-bottom: 30px; }
                        .blank-placeholder { border-bottom: 2px solid #374151; min-width: 80px; height: 20px; display: inline-block; margin: 0 4px; }
                    </style>
                </head>
                <body>
                    <div class="header">
                        <h1>Calculus Questions</h1>
                        <p>Difficulty: ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} | Questions: ${questionCount}</p>
                        <p>Generated on: ${new Date().toLocaleDateString()}</p>
                    </div>
                    ${questionsHTML}
                </body>
                </html>
            `);
            printWindow.document.close();
            printWindow.print();
        }

        async function saveQuestions() {
            const difficulty = document.querySelector('input[name="difficulty"]:checked').value;
            const questionCount = document.getElementById('questionCount').value;
            const questionType = document.getElementById('questionType').value;
            const questionsContent = document.getElementById('questionsContent');

            try {
                const response = await fetch('/api/save-generated-questions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        difficulty: difficulty,
                        questionCount: parseInt(questionCount),
                        questionType: questionType,
                        subject: 'calculus',
                        content: questionsContent.innerHTML,
                        title: `Calculus Questions - ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} Level`
                    })
                });

                if (response.ok) {
                    alert('Questions saved successfully!');
                } else {
                    throw new Error('Failed to save questions');
                }

            } catch (error) {
                console.error('Error saving questions:', error);
                alert('Failed to save questions. Please try again.');
            }
        }

        // Edit question functionality
        function editQuestion(index) {
            const questionItem = document.querySelector(`[data-question-index="${index}"]`);
            const questionText = document.getElementById(`question-text-${index}`);
            const answerText = document.getElementById(`answer-text-${index}`);
            const explanationText = document.getElementById(`explanation-text-${index}`);
            const controls = questionItem.querySelector('.question-controls');

            // Add editing mode class
            questionItem.classList.add('editing-mode');

            // Store original content
            const originalQuestion = questionText.innerHTML;
            const originalAnswer = answerText ? answerText.innerHTML : '';
            const originalExplanation = explanationText ? explanationText.innerHTML : '';

            // Replace with editable textareas and LaTeX toolbar
            questionText.innerHTML = `
                <div style="margin-bottom: 10px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600;">Question (LaTeX supported: use $...$ for inline math, $$...$$ for display math):</label>
                    <textarea class="question-text-edit" id="edit-question-${index}">${originalQuestion}</textarea>
                </div>
            `;

            // Add LaTeX toolbar for question
            const questionToolbar = addLatexToolbar(`edit-question-${index}`);
            questionText.appendChild(questionToolbar);

            if (answerText) {
                answerText.innerHTML = `
                    <div style="margin-bottom: 10px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: 600;">Answer (LaTeX supported):</label>
                        <textarea class="answer-edit" id="edit-answer-${index}">${originalAnswer}</textarea>
                    </div>
                `;

                // Add LaTeX toolbar for answer
                const answerToolbar = addLatexToolbar(`edit-answer-${index}`);
                answerText.appendChild(answerToolbar);
            }

            if (explanationText) {
                explanationText.innerHTML = `
                    <div style="margin-bottom: 10px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: 600;">Explanation (LaTeX supported):</label>
                        <textarea class="explanation-edit" id="edit-explanation-${index}">${originalExplanation}</textarea>
                    </div>
                `;

                // Add LaTeX toolbar for explanation
                const explanationToolbar = addLatexToolbar(`edit-explanation-${index}`);
                explanationText.appendChild(explanationToolbar);
            }

            // Store original content in data attributes for safe access
            questionItem.setAttribute('data-original-question', originalQuestion);
            questionItem.setAttribute('data-original-answer', originalAnswer);
            questionItem.setAttribute('data-original-explanation', originalExplanation);

            // Update controls
            controls.innerHTML = `
                <button class="control-btn save-btn" onclick="saveQuestionSafe(${index})">
                    <i class="fas fa-save"></i> Save
                </button>
                <button class="control-btn cancel-btn" onclick="cancelEditSafe(${index})">
                    <i class="fas fa-times"></i> Cancel
                </button>
            `;
        }

        function saveQuestionSafe(index) {
            const questionItem = document.querySelector(`[data-question-index="${index}"]`);
            saveQuestion(index,
                questionItem.getAttribute('data-original-question') || '',
                questionItem.getAttribute('data-original-answer') || '',
                questionItem.getAttribute('data-original-explanation') || ''
            );
        }

        function saveQuestion(index, originalQuestion, originalAnswer, originalExplanation) {
            const questionItem = document.querySelector(`[data-question-index="${index}"]`);
            const questionText = document.getElementById(`question-text-${index}`);
            const answerText = document.getElementById(`answer-text-${index}`);
            const explanationText = document.getElementById(`explanation-text-${index}`);
            const controls = questionItem.querySelector('.question-controls');

            // Get edited content
            const editedQuestion = document.getElementById(`edit-question-${index}`).value;
            const editedAnswer = document.getElementById(`edit-answer-${index}`) ? document.getElementById(`edit-answer-${index}`).value : '';
            const editedExplanation = document.getElementById(`edit-explanation-${index}`) ? document.getElementById(`edit-explanation-${index}`).value : '';

            // Update the stored data
            if (window.generatedQuestions && window.generatedQuestions[index]) {
                window.generatedQuestions[index].question = editedQuestion;
                window.generatedQuestions[index].answer = editedAnswer;
                window.generatedQuestions[index].explanation = editedExplanation;
            }

            // Update display
            questionText.innerHTML = editedQuestion;
            if (answerText) {
                answerText.innerHTML = editedAnswer;
            }
            if (explanationText) {
                explanationText.innerHTML = editedExplanation;
            }

            // Remove editing mode
            questionItem.classList.remove('editing-mode');

            // Re-render LaTeX if MathJax is available
            if (window.MathJax) {
                MathJax.typesetPromise([questionItem]).catch((err) => console.log(err.message));
            }

            // Restore original controls
            controls.innerHTML = `
                <button class="control-btn edit-btn" onclick="editQuestion(${index})">
                    <i class="fas fa-edit"></i> Edit
                </button>
                <button class="control-btn blank-btn" onclick="createBlanks(${index})">
                    <i class="fas fa-minus"></i> Add Blanks
                </button>
                <button class="control-btn remove-answer-btn" onclick="toggleAnswer(${index})">
                    <i class="fas fa-eye-slash"></i> Hide Answer
                </button>
            `;
        }

        function cancelEditSafe(index) {
            const questionItem = document.querySelector(`[data-question-index="${index}"]`);
            cancelEdit(index,
                questionItem.getAttribute('data-original-question') || '',
                questionItem.getAttribute('data-original-answer') || '',
                questionItem.getAttribute('data-original-explanation') || ''
            );
        }

        function cancelEdit(index, originalQuestion, originalAnswer, originalExplanation) {
            const questionItem = document.querySelector(`[data-question-index="${index}"]`);
            const questionText = document.getElementById(`question-text-${index}`);
            const answerText = document.getElementById(`answer-text-${index}`);
            const explanationText = document.getElementById(`explanation-text-${index}`);
            const controls = questionItem.querySelector('.question-controls');

            // Restore original content
            questionText.innerHTML = originalQuestion;
            if (answerText) {
                answerText.innerHTML = originalAnswer;
            }
            if (explanationText) {
                explanationText.innerHTML = originalExplanation;
            }

            // Remove editing mode
            questionItem.classList.remove('editing-mode');

            // Restore original controls
            controls.innerHTML = `
                <button class="control-btn edit-btn" onclick="editQuestion(${index})">
                    <i class="fas fa-edit"></i> Edit
                </button>
                <button class="control-btn blank-btn" onclick="createBlanks(${index})">
                    <i class="fas fa-minus"></i> Add Blanks
                </button>
                <button class="control-btn remove-answer-btn" onclick="toggleAnswer(${index})">
                    <i class="fas fa-eye-slash"></i> Hide Answer
                </button>
            `;
        }

        // Create blanks functionality
        function createBlanks(index) {
            const questionText = document.getElementById(`question-text-${index}`);
            const answerText = document.getElementById(`answer-text-${index}`);

            if (!questionText || !answerText) return;

            const question = questionText.innerHTML;
            const answer = answerText.innerHTML;

            // Show modal for blank creation
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.5);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 2000;
            `;

            modal.innerHTML = `
                <div style="background: white; padding: 30px; border-radius: 12px; max-width: 600px; width: 90%;">
                    <h3 style="margin-bottom: 20px; color: #374151;">Create Blanks in Question</h3>
                    <p style="margin-bottom: 15px; color: #6b7280;">Enter text to replace with blanks:</p>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Question (LaTeX supported):</label>
                        <textarea id="blank-question-${index}" style="width: 100%; height: 100px; padding: 10px; border: 2px solid #e5e7eb; border-radius: 6px;">${question}</textarea>
                        <div id="question-latex-toolbar-${index}" style="margin-top: 5px;"></div>
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Answer (LaTeX supported):</label>
                        <textarea id="blank-answer-${index}" style="width: 100%; height: 60px; padding: 10px; border: 2px solid #e5e7eb; border-radius: 6px;">${answer}</textarea>
                        <div id="answer-latex-toolbar-${index}" style="margin-top: 5px;"></div>
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Text to replace with blank:</label>
                        <input type="text" id="blank-text-${index}" placeholder="Enter text to replace with ______" style="width: 100%; padding: 10px; border: 2px solid #e5e7eb; border-radius: 6px;">
                    </div>

                    <div style="display: flex; gap: 10px; justify-content: flex-end;">
                        <button onclick="applyBlanks(${index})" style="padding: 10px 20px; background: #4f46e5; color: white; border: none; border-radius: 6px; cursor: pointer;">
                            Apply Blanks
                        </button>
                        <button onclick="closeBlanksModal()" style="padding: 10px 20px; background: #6b7280; color: white; border: none; border-radius: 6px; cursor: pointer;">
                            Cancel
                        </button>
                    </div>
                </div>
            `;

            document.body.appendChild(modal);
            window.currentBlanksModal = modal;

            // Add LaTeX toolbars to the modal
            setTimeout(() => {
                const questionToolbarContainer = document.getElementById(`question-latex-toolbar-${index}`);
                const answerToolbarContainer = document.getElementById(`answer-latex-toolbar-${index}`);

                if (questionToolbarContainer) {
                    const questionToolbar = addLatexToolbar(`blank-question-${index}`);
                    questionToolbar.style.fontSize = '11px';
                    questionToolbarContainer.appendChild(questionToolbar);
                }

                if (answerToolbarContainer) {
                    const answerToolbar = addLatexToolbar(`blank-answer-${index}`);
                    answerToolbar.style.fontSize = '11px';
                    answerToolbarContainer.appendChild(answerToolbar);
                }
            }, 100);
        }

        function applyBlanks(index) {
            const questionTextarea = document.getElementById(`blank-question-${index}`);
            const answerTextarea = document.getElementById(`blank-answer-${index}`);
            const blankText = document.getElementById(`blank-text-${index}`).value;

            if (!blankText.trim()) {
                alert('Please enter text to replace with blanks');
                return;
            }

            let modifiedQuestion = questionTextarea.value;
            let modifiedAnswer = answerTextarea.value;

            // Replace the specified text with blanks
            const blankPlaceholder = '<span class="blank-placeholder">______</span>';
            modifiedQuestion = modifiedQuestion.replace(new RegExp(blankText.replace(/[.*+?^${}()|[\]\\]/g, '\\$&'), 'gi'), blankPlaceholder);
            modifiedAnswer = modifiedAnswer.replace(new RegExp(blankText.replace(/[.*+?^${}()|[\]\\]/g, '\\$&'), 'gi'), blankPlaceholder);

            // Update the question display
            document.getElementById(`question-text-${index}`).innerHTML = modifiedQuestion;
            document.getElementById(`answer-text-${index}`).innerHTML = modifiedAnswer;

            // Update stored data
            if (window.generatedQuestions && window.generatedQuestions[index]) {
                window.generatedQuestions[index].question = modifiedQuestion;
                window.generatedQuestions[index].answer = modifiedAnswer;
            }

            // Re-render LaTeX
            if (window.MathJax) {
                const questionElement = document.getElementById(`question-text-${index}`);
                const answerElement = document.getElementById(`answer-text-${index}`);
                MathJax.typesetPromise([questionElement, answerElement]).catch((err) => console.log(err.message));
            }

            closeBlanksModal();
        }

        function closeBlanksModal() {
            if (window.currentBlanksModal) {
                document.body.removeChild(window.currentBlanksModal);
                window.currentBlanksModal = null;
            }
        }

        // Toggle answer visibility
        function toggleAnswer(index) {
            const answerDiv = document.getElementById(`question-answer-${index}`);
            const button = document.querySelector(`[data-question-index="${index}"] .remove-answer-btn`);

            if (!answerDiv || !button) return;

            if (answerDiv.classList.contains('hidden')) {
                // Show answer
                answerDiv.classList.remove('hidden');
                button.innerHTML = '<i class="fas fa-eye-slash"></i> Hide Answer';
                button.classList.remove('save-btn');
                button.classList.add('remove-answer-btn');
            } else {
                // Hide answer
                answerDiv.classList.add('hidden');
                button.innerHTML = '<i class="fas fa-eye"></i> Show Answer';
                button.classList.remove('remove-answer-btn');
                button.classList.add('save-btn');
            }
        }

        // Edit multiple choice options
        function editOption(questionIndex, optionIndex) {
            const optionSpan = document.getElementById(`option-${questionIndex}-${optionIndex}`);
            if (!optionSpan) return;

            // Get the text content without HTML tags for editing
            const originalText = optionSpan.textContent || optionSpan.innerText || '';

            // Store original text safely
            optionSpan.setAttribute('data-original-text', originalText);

            // Create inline editor
            optionSpan.innerHTML = `
                <input type="text" id="edit-option-input-${questionIndex}-${optionIndex}"
                       value="${originalText.replace(/"/g, '&quot;')}"
                       style="width: 300px; padding: 4px 8px; border: 2px solid #4f46e5; border-radius: 4px; font-size: 14px;"
                       onkeypress="if(event.key==='Enter') saveOptionSafe(${questionIndex}, ${optionIndex}); if(event.key==='Escape') cancelOptionEditSafe(${questionIndex}, ${optionIndex})"
                       onblur="saveOptionSafe(${questionIndex}, ${optionIndex})">
                <button onclick="saveOptionSafe(${questionIndex}, ${optionIndex}); return false;"
                        style="margin-left: 5px; padding: 2px 6px; background: #10b981; color: white; border: none; border-radius: 3px; cursor: pointer;">
                    <i class="fas fa-check"></i>
                </button>
                <button onclick="cancelOptionEditSafe(${questionIndex}, ${optionIndex}); return false;"
                        style="margin-left: 3px; padding: 2px 6px; background: #ef4444; color: white; border: none; border-radius: 3px; cursor: pointer;">
                    <i class="fas fa-times"></i>
                </button>
            `;

            // Focus on input
            const input = document.getElementById(`edit-option-input-${questionIndex}-${optionIndex}`);
            if (input) {
                input.focus();
                input.select();
            }
        }

        function saveOptionSafe(questionIndex, optionIndex) {
            const optionSpan = document.getElementById(`option-${questionIndex}-${optionIndex}`);
            const originalText = optionSpan ? optionSpan.getAttribute('data-original-text') || '' : '';
            saveOption(questionIndex, optionIndex, originalText);
        }

        function cancelOptionEditSafe(questionIndex, optionIndex) {
            const optionSpan = document.getElementById(`option-${questionIndex}-${optionIndex}`);
            const originalText = optionSpan ? optionSpan.getAttribute('data-original-text') || '' : '';
            cancelOptionEdit(questionIndex, optionIndex, originalText);
        }

        function saveOption(questionIndex, optionIndex, originalText) {
            const input = document.getElementById(`edit-option-input-${questionIndex}-${optionIndex}`);
            const optionSpan = document.getElementById(`option-${questionIndex}-${optionIndex}`);

            if (!input || !optionSpan) return;

            const newText = input.value.trim();

            // Create a temporary container to safely set the content
            const tempDiv = document.createElement('div');
            tempDiv.textContent = newText;

            // Update display
            optionSpan.innerHTML = `
                <span class="option-content">${tempDiv.innerHTML}</span>
                <button class="control-btn edit-btn" onclick="editOption(${questionIndex}, ${optionIndex})" style="margin-left: 10px; font-size: 10px; padding: 2px 6px;">
                    <i class="fas fa-edit"></i>
                </button>
            `;

            // Update stored data
            if (window.generatedQuestions && window.generatedQuestions[questionIndex] && window.generatedQuestions[questionIndex].options) {
                window.generatedQuestions[questionIndex].options[optionIndex] = newText;
            }

            // Re-render LaTeX if MathJax is available
            if (window.MathJax) {
                MathJax.typesetPromise([optionSpan]).catch((err) => console.log(err.message));
            }
        }

        function cancelOptionEdit(questionIndex, optionIndex, originalText) {
            const optionSpan = document.getElementById(`option-${questionIndex}-${optionIndex}`);
            if (!optionSpan) return;

            // Create a temporary container to safely set the content
            const tempDiv = document.createElement('div');
            tempDiv.textContent = originalText;

            // Restore original content
            optionSpan.innerHTML = `
                <span class="option-content">${tempDiv.innerHTML}</span>
                <button class="control-btn edit-btn" onclick="editOption(${questionIndex}, ${optionIndex})" style="margin-left: 10px; font-size: 10px; padding: 2px 6px;">
                    <i class="fas fa-edit"></i>
                </button>
            `;
        }

        // Add LaTeX helper function
        function insertLatex(elementId, latexCode) {
            const element = document.getElementById(elementId);
            if (element) {
                const currentValue = element.value || element.innerHTML;
                const newValue = currentValue + ' $' + latexCode + '$ ';

                if (element.tagName === 'TEXTAREA' || element.tagName === 'INPUT') {
                    element.value = newValue;
                } else {
                    element.innerHTML = newValue;
                }

                // Re-render LaTeX
                if (window.MathJax) {
                    MathJax.typesetPromise([element]).catch((err) => console.log(err.message));
                }
            }
        }

        // Add common LaTeX shortcuts
        function addLatexToolbar(targetElementId) {
            const toolbar = document.createElement('div');
            toolbar.style.cssText = 'margin: 10px 0; padding: 10px; background: #f3f4f6; border-radius: 6px; display: flex; flex-wrap: wrap; gap: 5px;';

            const latexButtons = [
                { symbol: '\\frac{a}{b}', label: 'Fraction' },
                { symbol: '\\int', label: 'Integral' },
                { symbol: '\\sum', label: 'Sum' },
                { symbol: '\\lim', label: 'Limit' },
                { symbol: '^{2}', label: 'Superscript' },
                { symbol: '_{n}', label: 'Subscript' },
                { symbol: '\\sqrt{x}', label: 'Square Root' },
                { symbol: '\\pi', label: 'Pi' },
                { symbol: '\\infty', label: 'Infinity' },
                { symbol: '\\partial', label: 'Partial' }
            ];

            latexButtons.forEach(btn => {
                const button = document.createElement('button');
                button.innerHTML = btn.label;
                button.style.cssText = 'padding: 4px 8px; background: #4f46e5; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 12px;';
                button.onclick = () => insertLatex(targetElementId, btn.symbol);
                toolbar.appendChild(button);
            });

            return toolbar;
        }
    </script>
