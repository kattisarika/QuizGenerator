<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create <%= subject %> Products - SkillOns</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4F46E5;
            --primary-dark: #4338CA;
            --secondary-color: #7C3AED;
            --success-color: #10B981;
            --warning-color: #F59E0B;
            --danger-color: #EF4444;
            --info-color: #3B82F6;
            --dark-color: #1F2937;
            --light-color: #F9FAFB;
            --border-radius: 12px;
            --shadow-sm: 0 1px 3px rgba(0,0,0,0.12);
            --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
            --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
            --shadow-xl: 0 20px 40px rgba(0,0,0,0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: var(--dark-color);
        }

        /* Enhanced Navbar */
        .navbar {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow-md);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 70px;
        }

        .nav-logo a {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .nav-logo a::before {
            content: "ðŸŽ“";
            font-size: 28px;
        }

        .nav-menu {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .nav-link {
            padding: 10px 16px;
            color: var(--dark-color);
            text-decoration: none;
            border-radius: var(--border-radius);
            transition: all 0.3s ease;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-link:hover {
            background: var(--light-color);
            color: var(--primary-color);
            transform: translateY(-2px);
        }

        .nav-link.logout-btn {
            background: var(--danger-color);
            color: white;
        }

        .nav-link.logout-btn:hover {
            background: #DC2626;
            transform: translateY(-2px);
        }

        /* Main Content */
        .main-content {
            margin-top: 70px;
            padding: 30px 20px;
            min-height: calc(100vh - 70px);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Header Section */
        .page-header {
            background: white;
            border-radius: var(--border-radius);
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-lg);
            text-align: center;
        }

        .subject-icon {
            font-size: 64px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-header h1 {
            font-size: 36px;
            color: var(--dark-color);
            margin-bottom: 15px;
        }

        .page-header p {
            font-size: 18px;
            color: #6B7280;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Product Categories */
        .product-categories {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .category-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 30px;
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .category-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-xl);
        }

        .category-icon {
            font-size: 48px;
            margin-bottom: 20px;
            color: var(--primary-color);
        }

        .category-card h3 {
            font-size: 24px;
            color: var(--dark-color);
            margin-bottom: 15px;
        }

        .category-card p {
            color: #6B7280;
            margin-bottom: 25px;
            line-height: 1.6;
        }

        .btn {
            padding: 12px 24px;
            border-radius: var(--border-radius);
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
        }

        .btn-secondary {
            background: var(--light-color);
            color: var(--dark-color);
            border: 2px solid #E5E7EB;
        }

        .btn-secondary:hover {
            background: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        /* Coming Soon Badge */
        .coming-soon {
            position: absolute;
            top: 20px;
            right: 20px;
            background: var(--warning-color);
            color: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        /* Question Generator Styles */
        .question-generator-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .generator-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .generator-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 40px;
            text-align: center;
        }

        .generator-icon {
            font-size: 48px;
            margin-bottom: 20px;
            opacity: 0.9;
        }

        .generator-header h3 {
            font-size: 28px;
            margin-bottom: 15px;
        }

        .generator-header p {
            font-size: 16px;
            opacity: 0.9;
            line-height: 1.6;
        }

        .generator-form {
            padding: 40px;
        }

        .difficulty-section,
        .generation-section,
        .action-section {
            margin-bottom: 40px;
        }

        .difficulty-section h4,
        .generation-section h4 {
            font-size: 20px;
            color: var(--dark-color);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Radio Button Styles */
        .radio-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .radio-option {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            padding: 20px;
            border: 2px solid #e5e7eb;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: all 0.3s ease;
            background: #fafbfc;
        }

        .radio-option:hover {
            border-color: var(--primary-color);
            background: #f0f9ff;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .radio-option input[type="radio"] {
            display: none;
        }

        .radio-custom {
            width: 20px;
            height: 20px;
            border: 2px solid #d1d5db;
            border-radius: 50%;
            position: relative;
            flex-shrink: 0;
            margin-top: 2px;
            transition: all 0.3s ease;
        }

        .radio-option input[type="radio"]:checked + .radio-custom {
            border-color: var(--primary-color);
            background: var(--primary-color);
        }

        .radio-option input[type="radio"]:checked + .radio-custom::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 8px;
            height: 8px;
            background: white;
            border-radius: 50%;
        }

        .radio-option input[type="radio"]:checked ~ .radio-content {
            color: var(--primary-color);
        }

        .radio-content strong {
            display: block;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .radio-content small {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.4;
        }

        /* Parameter Grid */
        .parameter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .parameter-item {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .parameter-item label {
            font-weight: 600;
            color: var(--dark-color);
            font-size: 14px;
        }

        .parameter-item select {
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: var(--border-radius);
            font-size: 16px;
            background: white;
            transition: all 0.3s ease;
        }

        .parameter-item select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        }

        /* Action Section */
        .action-section {
            text-align: center;
            border-top: 1px solid #e5e7eb;
            padding-top: 30px;
        }

        .loading-indicator {
            margin-top: 20px;
            color: var(--primary-color);
            font-size: 16px;
            font-weight: 500;
        }

        .loading-indicator i {
            margin-right: 10px;
        }

        /* Generated Questions Styles */
        .generated-questions {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .questions-header {
            background: #f8f9fa;
            padding: 25px 30px;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .questions-header h3 {
            font-size: 22px;
            color: var(--dark-color);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .questions-actions {
            display: flex;
            gap: 10px;
        }

        .questions-content {
            padding: 30px;
            max-height: 600px;
            overflow-y: auto;
        }

        .question-item {
            background: #f8f9fa;
            border-radius: var(--border-radius);
            padding: 20px;
            margin-bottom: 20px;
            border-left: 4px solid var(--primary-color);
        }

        .question-item:last-child {
            margin-bottom: 0;
        }

        .question-number {
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .question-text {
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .question-options {
            margin-left: 20px;
        }

        .question-options li {
            margin-bottom: 8px;
            font-size: 15px;
        }

        .question-answer {
            background: #e0f2fe;
            padding: 10px 15px;
            border-radius: 8px;
            margin-top: 15px;
            font-weight: 600;
            color: #0277bd;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .nav-container {
                padding: 0 15px;
            }

            .main-content {
                padding: 20px 15px;
            }

            .page-header {
                padding: 30px 20px;
            }

            .page-header h1 {
                font-size: 28px;
            }

            .subject-icon {
                font-size: 48px;
            }

            .product-categories {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .category-card {
                padding: 25px 20px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/teacher/dashboard">SkillOns</a>
            </div>
            <div class="nav-menu">
                <a href="/teacher/dashboard" class="nav-link">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="/create-quiz" class="nav-link">
                    <i class="fas fa-plus-circle"></i> Create Quiz
                </a>
                <a href="/logout" class="nav-link logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <div class="subject-icon">
                    <% if (subjectCode === 'grade-6-math') { %>
                        <i class="fas fa-calculator"></i>
                    <% } else if (subjectCode === 'prealgebra') { %>
                        <i class="fas fa-square-root-alt"></i>
                    <% } else if (subjectCode === 'algebra') { %>
                        <i class="fas fa-function"></i>
                    <% } else if (subjectCode === 'geometry') { %>
                        <i class="fas fa-shapes"></i>
                    <% } else if (subjectCode === 'algebra-2') { %>
                        <i class="fas fa-superscript"></i>
                    <% } else if (subjectCode === 'precalculus') { %>
                        <i class="fas fa-chart-line"></i>
                    <% } else if (subjectCode === 'calculus') { %>
                        <i class="fas fa-infinity"></i>
                    <% } %>
                </div>
                <h1>Create <%= subject %> Products</h1>
                <p><%= description %></p>
            </div>

            <% if (subjectCode === 'calculus') { %>
                <!-- Calculus-specific Trigonometry Question Generator -->
                <div class="question-generator-container">
                    <div class="generator-card">
                        <div class="generator-header">
                            <div class="generator-icon">
                                <i class="fas fa-brain"></i>
                            </div>
                            <h3>AI Trigonometry Question Generator</h3>
                            <p>Generate custom trigonometry questions using advanced AI. Select difficulty level and let our LLM create tailored questions for your students.</p>
                        </div>

                        <div class="generator-form">
                            <div class="difficulty-section">
                                <h4><i class="fas fa-sliders-h"></i> Select Difficulty Level</h4>
                                <div class="radio-group">
                                    <label class="radio-option">
                                        <input type="radio" name="difficulty" value="easy" checked>
                                        <span class="radio-custom"></span>
                                        <div class="radio-content">
                                            <strong>Easy</strong>
                                            <small>Basic trigonometric functions and simple angle calculations</small>
                                        </div>
                                    </label>

                                    <label class="radio-option">
                                        <input type="radio" name="difficulty" value="medium">
                                        <span class="radio-custom"></span>
                                        <div class="radio-content">
                                            <strong>Medium</strong>
                                            <small>Trigonometric identities and intermediate problem solving</small>
                                        </div>
                                    </label>

                                    <label class="radio-option">
                                        <input type="radio" name="difficulty" value="difficult">
                                        <span class="radio-custom"></span>
                                        <div class="radio-content">
                                            <strong>Difficult</strong>
                                            <small>Complex trigonometric equations and advanced applications</small>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="generation-section">
                                <h4><i class="fas fa-cogs"></i> Question Parameters</h4>
                                <div class="parameter-grid">
                                    <div class="parameter-item">
                                        <label for="questionCount">Number of Questions</label>
                                        <select id="questionCount" name="questionCount">
                                            <option value="5">5 Questions</option>
                                            <option value="10" selected>10 Questions</option>
                                            <option value="15">15 Questions</option>
                                            <option value="20">20 Questions</option>
                                        </select>
                                    </div>

                                    <div class="parameter-item">
                                        <label for="questionType">Question Format</label>
                                        <select id="questionType" name="questionType">
                                            <option value="multiple-choice">Multiple Choice</option>
                                            <option value="short-answer" selected>Short Answer</option>
                                            <option value="step-by-step">Step-by-Step Solutions</option>
                                            <option value="mixed">Mixed Format</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="action-section">
                                <button type="button" class="btn btn-primary" onclick="generateTrigQuestions()">
                                    <i class="fas fa-magic"></i> Generate Trigonometry Questions
                                </button>
                                <div class="loading-indicator" id="loadingIndicator" style="display: none;">
                                    <i class="fas fa-spinner fa-spin"></i> Generating questions with AI...
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Generated Questions Display -->
                    <div class="generated-questions" id="generatedQuestions" style="display: none;">
                        <div class="questions-header">
                            <h3><i class="fas fa-list-ol"></i> Generated Trigonometry Questions</h3>
                            <div class="questions-actions">
                                <button type="button" class="btn btn-secondary" onclick="exportQuestions()">
                                    <i class="fas fa-download"></i> Export PDF
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="saveQuestions()">
                                    <i class="fas fa-save"></i> Save Questions
                                </button>
                            </div>
                        </div>
                        <div class="questions-content" id="questionsContent">
                            <!-- Generated questions will be displayed here -->
                        </div>
                    </div>
                </div>
            <% } else { %>
                <!-- Default product categories for other subjects -->
                <div class="product-categories">
                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h3>Worksheets & Exercises</h3>
                        <p>Create interactive worksheets with step-by-step solutions and practice problems tailored for <%= subject %>.</p>
                        <div class="coming-soon">Coming Soon</div>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-edit"></i> Create Worksheet
                        </button>
                    </div>

                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <h3>Assessments & Tests</h3>
                        <p>Design comprehensive assessments with auto-grading and detailed performance analytics for <%= subject %>.</p>
                        <div class="coming-soon">Coming Soon</div>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-tasks"></i> Create Assessment
                        </button>
                    </div>

                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-gamepad"></i>
                        </div>
                        <h3>Interactive Activities</h3>
                        <p>Build engaging interactive activities and games that make learning <%= subject %> fun and memorable.</p>
                        <div class="coming-soon">Coming Soon</div>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-play"></i> Create Activity
                        </button>
                    </div>

                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-presentation"></i>
                        </div>
                        <h3>Lesson Plans</h3>
                        <p>Develop structured lesson plans with objectives, activities, and resources for <%= subject %> topics.</p>
                        <div class="coming-soon">Coming Soon</div>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-chalkboard-teacher"></i> Create Lesson
                        </button>
                    </div>

                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h3>Progress Trackers</h3>
                        <p>Create visual progress tracking tools to monitor student advancement in <%= subject %> concepts.</p>
                        <div class="coming-soon">Coming Soon</div>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-chart-line"></i> Create Tracker
                        </button>
                    </div>

                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3>Study Guides</h3>
                        <p>Generate comprehensive study guides with key concepts, formulas, and examples for <%= subject %>.</p>
                        <div class="coming-soon">Coming Soon</div>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-book"></i> Create Guide
                        </button>
                    </div>
                </div>
            <% } %>

            <div style="text-align: center; margin-top: 40px;">
                <a href="/teacher/dashboard" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </main>

    <script>
        // Question generation functionality
        async function generateTrigQuestions() {
            const difficulty = document.querySelector('input[name="difficulty"]:checked').value;
            const questionCount = document.getElementById('questionCount').value;
            const questionType = document.getElementById('questionType').value;

            const loadingIndicator = document.getElementById('loadingIndicator');
            const generateBtn = document.querySelector('.btn-primary');
            const generatedQuestionsDiv = document.getElementById('generatedQuestions');

            // Show loading state
            loadingIndicator.style.display = 'block';
            generateBtn.disabled = true;
            generateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';

            try {
                const response = await fetch('/api/generate-trig-questions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        difficulty: difficulty,
                        questionCount: parseInt(questionCount),
                        questionType: questionType,
                        subject: 'trigonometry'
                    })
                });

                if (!response.ok) {
                    throw new Error('Failed to generate questions');
                }

                const data = await response.json();
                displayGeneratedQuestions(data.questions);

            } catch (error) {
                console.error('Error generating questions:', error);
                alert('Failed to generate questions. Please try again.');
            } finally {
                // Hide loading state
                loadingIndicator.style.display = 'none';
                generateBtn.disabled = false;
                generateBtn.innerHTML = '<i class="fas fa-magic"></i> Generate Trigonometry Questions';
            }
        }

        function displayGeneratedQuestions(questions) {
            const questionsContent = document.getElementById('questionsContent');
            const generatedQuestionsDiv = document.getElementById('generatedQuestions');

            let questionsHTML = '';

            questions.forEach((question, index) => {
                questionsHTML += `
                    <div class="question-item">
                        <div class="question-number">Question ${index + 1}</div>
                        <div class="question-text">${question.question}</div>
                        ${question.options ? `
                            <ol class="question-options">
                                ${question.options.map(option => `<li>${option}</li>`).join('')}
                            </ol>
                        ` : ''}
                        <div class="question-answer">
                            <strong>Answer:</strong> ${question.answer}
                        </div>
                        ${question.explanation ? `
                            <div class="question-explanation" style="margin-top: 10px; padding: 10px; background: #f0f9ff; border-radius: 6px;">
                                <strong>Explanation:</strong> ${question.explanation}
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            questionsContent.innerHTML = questionsHTML;
            generatedQuestionsDiv.style.display = 'block';

            // Scroll to generated questions
            generatedQuestionsDiv.scrollIntoView({ behavior: 'smooth' });
        }

        function exportQuestions() {
            const questionsContent = document.getElementById('questionsContent');
            const difficulty = document.querySelector('input[name="difficulty"]:checked').value;
            const questionCount = document.getElementById('questionCount').value;

            // Create a new window for printing
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Trigonometry Questions - ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} Level</title>
                    <style>
                        body { font-family: Arial, sans-serif; margin: 20px; }
                        .header { text-align: center; margin-bottom: 30px; }
                        .question-item { margin-bottom: 25px; page-break-inside: avoid; }
                        .question-number { font-weight: bold; color: #4F46E5; margin-bottom: 10px; }
                        .question-text { margin-bottom: 15px; line-height: 1.6; }
                        .question-options { margin-left: 20px; }
                        .question-options li { margin-bottom: 8px; }
                        .question-answer { background: #e0f2fe; padding: 10px; border-radius: 5px; margin-top: 15px; }
                        .question-explanation { background: #f0f9ff; padding: 10px; border-radius: 5px; margin-top: 10px; }
                    </style>
                </head>
                <body>
                    <div class="header">
                        <h1>Trigonometry Questions</h1>
                        <p>Difficulty: ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} | Questions: ${questionCount}</p>
                        <p>Generated on: ${new Date().toLocaleDateString()}</p>
                    </div>
                    ${questionsContent.innerHTML}
                </body>
                </html>
            `);
            printWindow.document.close();
            printWindow.print();
        }

        async function saveQuestions() {
            const difficulty = document.querySelector('input[name="difficulty"]:checked').value;
            const questionCount = document.getElementById('questionCount').value;
            const questionType = document.getElementById('questionType').value;
            const questionsContent = document.getElementById('questionsContent');

            try {
                const response = await fetch('/api/save-generated-questions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        difficulty: difficulty,
                        questionCount: parseInt(questionCount),
                        questionType: questionType,
                        subject: 'trigonometry',
                        content: questionsContent.innerHTML,
                        title: `Trigonometry Questions - ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} Level`
                    })
                });

                if (response.ok) {
                    alert('Questions saved successfully!');
                } else {
                    throw new Error('Failed to save questions');
                }

            } catch (error) {
                console.error('Error saving questions:', error);
                alert('Failed to save questions. Please try again.');
            }
        }
    </script>
